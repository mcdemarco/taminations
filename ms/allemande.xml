<tamination>

  <tam title="Allemande Left" from="Facing Couples" formation="Facing Couples">
    <path>
      <move select="Forward 2"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Left" beats="2" offsetX="1.5" offsetY=".5"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Right" beats="2" offsetX="1.5" offsetY=".5"/>
    </path>
  </tam>

  <tam title="Allemande Left" from="Eight Chain Thru" formation="Eight Chain Thru">
    <path>
      <move select="Forward"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Left" beats="2" offsetX="1.5" offsetY=".5"/>
    </path>
    <path>
      <move select="Extend Right"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Right" beats="2" offsetX="1.5" offsetY=".5"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Right"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Allemande Left"
       from="Static Square"
       formation="Static Square" >
    <path>
      <move select="Lead Left" beats="3" offsetX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" offsetY=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="1.5" offsetX="-.5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="2" offsetY=".5" />
    </path>
    <path>
      <move select="Lead Left" beats="3" offsetX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" offsetY=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="1.5" offsetX="-.5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="2" offsetY=".5" />
    </path>
  </tam>

</tamination>
