<tamination>

  <tam title="Step to a Wave"
       from="Facing Couples"
       formation="Facing Couples"
       parts="" difficulty="1">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward 2" />
    </path>
  </tam>

  <tam title="Step to a Wave"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       parts="" difficulty="1">
    <path>
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
  </tam>

  <tam title="Step to a Wave"
       from="Facing Lines"
       formation="Normal Lines"
       parts="" difficulty="2">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Step to a Left-Hand Wave"
       from="Facing Couples"
       formation="Facing Couples"
       parts="" difficulty="2">
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Step to a Left-Hand Wave"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       parts="" difficulty="2">
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Step to a Left-Hand Wave"
       from="Facing Lines"
       formation="Normal Lines"
       parts="" difficulty="2">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Allemande Left to an Alamo Ring"
       from="Static Square"
       formation="Static Square"
       parts="" difficulty="1">
    <path>
      <move select="Lead Left" beats="3" offsetX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="HalfHinge Left" scaleX=".5" scaleY=".5" offsetX=".646" offsetY="-.061" />
      <move select="Sxtnth Left" hands="gripboth" />
    </path>
    <path>
      <move select="Lead Right" offsetX="-.5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="HalfHinge Left" scaleX=".5" scaleY=".5" offsetX=".061" offsetY="-.646" />
      <move select="Sxtnth Right" hands="gripboth" />
    </path>
    <path>
      <move select="Lead Left" beats="3" offsetX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="HalfHinge Left" scaleX=".5" scaleY=".5" offsetX=".646" offsetY="-.061" />
      <move select="Sxtnth Left" hands="gripboth" />
    </path>
    <path>
      <move select="Lead Right" offsetX="-.5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="HalfHinge Left" scaleX=".5" scaleY=".5" offsetX=".061" offsetY="-.646" />
      <move select="Sxtnth Right" hands="gripboth" />
    </path>
  </tam>
</tamination>
