<tamination>

  <tam title="Pass the Ocean"
       from="Facing Couples"
       formation="Facing Couples"
       parts="" difficulty="1">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Forward" beats=".5" />
      <move select="Lead Right" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" hands="left" beats="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Pass the Ocean"
       from="Lines"
       formation="Normal Lines"
       parts="" difficulty="1">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Forward" beats=".5" />
      <move select="Lead Right" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" hands="left" beats="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Forward" beats=".5" />
      <move select="Lead Right" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" hands="left" beats="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Pass the Ocean"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       parts="" difficulty="1">
    <path>
      <move select="Extend Left" beats="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY=".5" />
      <move select="Lead Left" hands="left" beats="2" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY=".5" />
      <move select="Lead Left" hands="left" beats="2" scaleX=".5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Pass the Ocean"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="" difficulty="3">
    <path>
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="3" />
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5" />
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="3" />
    </path>
  </tam>

  <tam title="Pass the Ocean"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="" difficulty="3">
    <path>
      <move select="Lead Left" beats="4" scaleX=".5" scaleY="3" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleX=".5" scaleY="3" />
    </path>
  </tam>
</tamination>
