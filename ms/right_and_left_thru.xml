<tamination>

  <tam title="Right and Left Thru"
       from="Facing Couples"
       formation="Facing Couples"
       parts="3" difficulty="1">
    <path>
      <move select="Pull Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Beau Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Pull Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Belle Wheel" scaleX=".67" />
    </path>
  </tam>

  <tam title="Right and Left Thru"
       from="Right-Hand Wave"
       formation="Wave RH"
       parts="2" difficulty="1">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2" />
      <move select="Beau Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Belle Wheel" scaleX=".67" />
    </path>
  </tam>

  <tam title="Right and Left Thru"
       from="Lines"
       formation="Normal Lines"
       parts="3" difficulty="1">
    <path>
      <move select="Pull Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Beau Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Pull Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Belle Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Pull Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Beau Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Pull Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Belle Wheel" scaleX=".67" />
    </path>
  </tam>

  <tam title="Right and Left Thru"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       parts="3" difficulty="1">
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Beau Wheel" scaleX=".5" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Belle Wheel" scaleX=".5" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Beau Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Belle Wheel" scaleX=".67" />
    </path>
  </tam>

  <tam title="Right and Left Thru"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="2" difficulty="2">
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Beau Wheel" scaleX=".5" />
    </path>
    <path>
      <move select="Forward" beats="2" />
      <move select="Belle Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Forward" beats="2" />
      <move select="Belle Wheel" scaleX=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Beau Wheel" scaleX=".67" />
    </path>
    <taminator>
      This is an example of the <a href="ocean_wave_rule.html">Ocean Wave Rule</a>.
    </taminator>
  </tam>

  <tam title="Right and Left Thru"
       from="Tidal Wave"
       formation="Tidal Wave RH BGGB"
       parts="2" difficulty="2">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Beau Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Belle Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Belle Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Beau Wheel" scaleX=".67" />
    </path>
    <taminator>
      Another example of the <a href="ocean_wave_rule.html">Ocean Wave Rule</a>.
      This is often called after
      <a href="spin_the_top.html?SpintheTopfromRightHandWaves">Spin the Top</a>
    </taminator>
  </tam>
</tamination>
