<tamination>

  <tam title="Step and Slide"
       from="Lines Facing Out"
       formation="Formation girl 3 2 90 boy 1 2 90 girl -1 2 90 boy -3 2 90">
    <path numbers="4 5">
      <move select="Dodge Left" beats="4" offsetX="-1" />
    </path>
    <path numbers="3 6">
      <move select="Forward" hands="left" beats="2" />
    </path>
    <path numbers="2 7">
      <move select="Forward" hands="right" beats="2" />
    </path>
    <path numbers="1 8">
      <move select="Dodge Right" beats="4" offsetX="-1" />
    </path>
  </tam>

  <tam title="Step and Slide" from="Right-Hand Two-Faced Line"
       formation="Formation boy -3 0 90 girl -1 0 90">
    <path numbers="1 4">
      <move select="Dodge Right" beats="4" />
    </path>
    <path numbers="2 3">
      <move select="Forward 2"  />
    </path>
  </tam>

  <tam title="Step and Slide"
       from="Inverted Lines"
       formation="Inverted Lines Centers Out"
       parts="" >
    <path>
      <move select="Extend Right" beats="4" scaleY="2" />
    </path>
    <path>
      <move select="Forward" hands="left" beats="2" />
    </path>
    <path>
      <move select="Forward" hands="right" beats="2" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleY="2" />
    </path>
  </tam>
</tamination>
