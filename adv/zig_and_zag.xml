  <tam title="Zig" from="Three Quarters Tag" formation="3/4 Tag">
    <path numbers="5 4">
      <move select="Quarter Right" offsetY="-1"/>
    </path>
    <path numbers="6 3">
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <path numbers="8 1">
    </path>
    <path numbers="2 7">
    </path>
    <taminator>Here the dancers adjust to form diamonds.
    </taminator>
  </tam>

