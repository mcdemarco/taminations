      <move select="Quarter Left" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1" />
    </path>
  </tam>

  <tam title="Zig Zag"
       from="Two-Faced Lines"
       formation="Two-Faced Lines RH"
       parts="" >
