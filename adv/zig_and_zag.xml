<tamination>

  <tam title="Zig Zag"
       from="Double Pass Thru"
       formation="Double Pass Thru"
       parts="" >
    <path>
      <move select="Quarter Left" beats="2" offsetY="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1" />
    </path>
  </tam>

  <tam title="Zig Zag"
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru"
       parts="" >
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetY="1" />
    </path>
  </tam>

  <tam title="Zig Zag"
       from="Right-Hand Columns"
       formation="Formation girl -1 3 90  boy -1 1 90  girl -1 -1 90  boy -1 -3 90">
    <path numbers="1 8">
      <move select="Quarter Right" beats="2" offsetY="1" />
    </path>
    <path numbers="2 7">
      <move select="Quarter Left" beats="2" offsetY="1" />
    </path>
    <path numbers="3 6">
      <move select="Quarter Right" beats="2" offsetY="1" />
    </path>
    <path numbers="4 5">
      <move select="Quarter Left" beats="2" offsetY="1" />
    </path>
  </tam>

  <tam title="Zig Zag"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       parts="" >
