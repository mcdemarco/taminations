<tamination>

  <tam title="Pass and Roll" from="Single Column"
       formation="Formation boy -3 0 0 girl -1 0 180">
    <path numbers="1 4">
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Right" scaleY=".5" />
      <move select="U-Turn Right" offsetY="-1"/>
    </path>
    <path numbers="2 3">
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Pass and Roll"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       parts="" >
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Right" scaleY=".5" />
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Left Pass and Roll"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       parts="" >
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Left" scaleY=".5" />
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Left" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Left" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="As Couples Pass and Roll"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       parts="" >
    <path>
      <move select="Extend Left" hands="right" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX="1.5" scaleY="1.5" />
      <move select="Forward 2" />
      <move select="Run Right" hands="right" scaleX="2.25" scaleY="2.25" />
    </path>
    <path>
      <move select="Extend Left" hands="left" scaleY="1.5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Run Right" hands="left" scaleX=".75" scaleY=".75" />
    </path>
    <path>
      <move select="Extend Left" hands="right" scaleY=".5" />
      <move select="Run Right" beats="5" scaleX="1.5" scaleY="1.5" />
      <move select="Forward 2" />
      <move select="Extend Left" beats="3" hands="right" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" hands="left" scaleY="1.5" />
      <move select="Run Right" beats="5" scaleX=".5" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Extend Left" beats="3" hands="left" scaleX="2" scaleY=".5" />
    </path>
  </tam>
</tamination>
