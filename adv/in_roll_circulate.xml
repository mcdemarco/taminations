<tamination>

  <tam title="In-Roll Circulate"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="2" >
    <path numbers="1 8">
      <move select="Forward 4" />
    </path>
    <path numbers="2 7">
      <move select="Flip Right" beats="4" />
    </path>
    <path numbers="3 6">
      <move select="Flip Left" beats="4" />
    </path>
    <path numbers="4 5">
      <move select="Flip Right" beats="4" />
    </path>
  </tam>

  <tam title="In-Roll Circulate"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="2" >
    <path numbers="1 8">
      <move select="Flip Left" beats="4" />
    </path>
    <path numbers="2 7">
      <move select="Flip Right" beats="4" />
    </path>
    <path numbers="3 6">
      <move select="Flip Left" beats="4" />
    </path>
    <path numbers="4 5">
      <move select="Forward 4" />
    </path>
  </tam>

  <tam title="In-Roll Circulate"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH"
       parts="2" >
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Flip Left" beats="4" />
    </path>
    <path>
      <move select="Flip Right" beats="4" />
    </path>
    <path>
      <move select="Flip Right" beats="4" />
    </path>
  </tam>

  <tam title="In-Roll Circulate"
       from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH"
       parts="2" >
    <path>
      <move select="Flip Left" beats="4" />
    </path>
    <path>
      <move select="Flip Left" beats="4" />
    </path>
    <path>
      <move select="Flip Right" beats="4" />
    </path>
    <path>
      <move select="Forward 4" />
    </path>
  </tam>

  <tam title="In-Roll Circulate" from="3 and 1 Lines"
       formation="Formation boy -2 3 0 girl -2 1 180 girl -2 -1 180 boy -2 -3 180"
       parts="2">
    <path numbers="1 8">
      <move select="Forward 4" />
    </path>
    <path numbers="2 7">
      <move select="Flip Right" beats="4" />
    </path>
    <path numbers="3 6">
      <move select="Flip Right" beats="4" />
    </path>
    <path numbers="4 5">
      <move select="Flip Right" beats="4" />
    </path>
  </tam>


</tamination>
