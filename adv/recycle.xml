<tamination>

  <tam title="Recycle"
       from="Facing Couples"
       formation="Facing Couples"
       parts="" >
    <path numbers="1 4">
      <move select="U-Turn Right" beats="3" offsetX="2" />
    </path>
    <path numbers="2 3">
      <Movement hands="no" beats="3" cx1="-1" cy1="2" cx2="1" cy2="4" x2="2" y2="4" cx3="1" cx4="2" cy4="2" x4="3" y4="2" />
    </path>
  </tam>

  <tam title="Recycle"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       parts="" >
    <path>
      <move select="U-Turn Right" beats="3" offsetX="1" />
    </path>
    <path>
      <Movement hands="no" beats="3" cx1="-1" cy1="2" cx2="1" cy2="4" x2="1" y2="4" cx3="1" cx4="2" cy4="2" x4="3" y4="2" />
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="1" />
    </path>
    <path>
      <Movement hands="no" beats="3" cx1="-1" cy1="2" cx2="1" cy2="4" x2="1" y2="4" cx3="1" cx4="2" cy4="2" x4="3" y4="2" />
    </path>
  </tam>

  <tam title="Recycle"
       from="Lines"
       formation="Normal Lines"
       parts="" >
    <path>
      <move select="U-Turn Right" beats="3" offsetX="2" offsetY="-.5" />
    </path>
    <path>
      <Movement hands="no" beats="3" cx1="-1" cy1="2" cx2="1" cy2="2.5" x2="2" y2="2.5" cx3="1" cx4="2" cy4="2" x4="3" y4="2" />
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="2" offsetY="-.5" />
    </path>
    <path>
      <Movement hands="no" beats="3" cx1="-1" cy1="2" cx2="1" cy2="2.5" x2="2" y2="2.5" cx3="1" cx4="2" cy4="2" x4="3" y4="2" />
    </path>
  </tam>

  <tam title="As Couples Recycle"
       from="Lines"
       formation="Normal Lines"
       parts="" >
    <path>
      <move select="Run Right" hands="right" beats="5" offsetX="2" offsetY="-.5" />
    </path>
    <path>
      <move select="U-Turn Right" hands="left" beats="5" offsetX="2" offsetY=".5" />
    </path>
    <path>
      <Movement hands="gripright" beats="5" cx1="-1" cy1="2" cx2="1" cy2="4.5" x2="2" y2="4.5" cx3="1" cx4="2" cy4="2" x4="3" y4="2" />
    </path>
    <path>
      <Movement hands="gripleft" beats="5" cx1="-1" cy1="2" cx2="1" cy2="5.5" x2="2" y2="5.5" cx3="1" cx4="2" cy4="2" x4="3" y4="2" />
    </path>
  </tam>

  <tam title="All 8 Recycle"
       from="Static Square"
       formation="Static Square"
       parts="" >
    <path>
      <move select="U-Turn Right" beats="4" offsetX="3" />
    </path>
    <path>
      <move select="Stand" />
      <move select="Extend Left" beats="3" scaleX="3" scaleY="4" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" offsetX="3" />
    </path>
    <path>
      <move select="Stand" />
      <move select="Extend Left" beats="3" scaleX="3" scaleY="4" />
    </path>
  </tam>
</tamination>
