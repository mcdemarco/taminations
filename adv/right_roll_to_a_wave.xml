<tamination>

  <tam title="Right Roll to a Wave"
       from="Couples Facing Out"
       formation="Couples Facing Out"
       parts="" >
    <path>
      <move select="Flip Right" beats="4" offsetX="-2" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" offsetX="-2" />
    </path>
  </tam>

  <tam title="Right Roll to a Wave"
       from="Right-Hand Box"
       formation="Box RH"
       parts="" >
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-2" />
    </path>
  </tam>

  <tam title="Right Roll to a Wave"
       from="Left-Hand Box"
       formation="Box LH"
       parts="" >
    <path>
      <move select="Run Right" beats="3" offsetX="-2" />
    </path>
    <path>
      <move select="Forward 2" beats="3" />
    </path>
  </tam>

  <tam title="Right Roll to a Wave"
       from="Double Pass Thru"
       formation="Double Pass Thru"
       parts="" >
    <path>
      <move select="Extend Left" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="3" />
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-1" />
    </path>
    <path>
      <move select="Flip Right" beats="3" offsetX="-1" />
    </path>
  </tam>

  <tam title="Right Roll to a Wave"
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru"
       parts="" >
    <path>
      <move select="Flip Right" beats="4" offsetX="-1" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" offsetX="-1" />
    </path>
    <path>
      <move select="Forward" beats="4" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleY="2" />
    </path>
  </tam>

  <tam title="Right Roll to a Wave"
       from="Trade By"
       formation="Trade By"
       parts="" >
    <path>
      <move select="Flip Right" beats="4" offsetX="-1" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" offsetX="-1" />
    </path>
    <path>
      <move select="Flip Right" beats="4" offsetX="-1" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" offsetX="-1" />
    </path>
  </tam>

  <tam title="Right Roll to a Wave"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       parts="" >
    <path>
      <move select="U-Turn Right" offsetX="-1" offsetY="-.5" />
      <move select="Forward" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-1" offsetY="-.5" />
      <move select="Forward" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-1" offsetY="-.5" />
      <move select="Forward" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-1" offsetY="-.5" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Right Roll to a Wave"
       from="Two-Faced Lines"
       formation="Two-Faced Lines LH"
       parts="" >
    <path>
      <move select="U-Turn Right" offsetX="-2" offsetY="-.5" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-2" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Right Roll to a Wave"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       parts="" >
    <path>
      <move select="U-Turn Right" offsetX="-1" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-1" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleY="2" />
    </path>
  </tam>

  <tam title="Right Roll to a Wave"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       parts="" >
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Run Right" offsetX="-1" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Run Right" offsetX="-1" />
    </path>
  </tam>

  <tam title="Right Roll to a Wave"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG"
       parts="" >
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-2" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-2" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Right Roll to a Wave"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG"
       parts="" >
    <path>
      <move select="U-Turn Right" offsetX="-2" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-2" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Right Roll to a Wave Three Times"
       from="Single File Dancers"
       formation="Formation boy -2.5 0 180 girl -3.5 0 180 boy -1.5 0 0 girl -.5 0 0"
       parts="2;3">
    <path>
      <move select="Extend Left" beats="2" scaleX=".5" />
      <move select="U-Turn Right" offsetX="-1" />
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5"/>
      <move select="Extend Left" beats="3" scaleY="2" />
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX=".5" />
      <move select="U-Turn Right" offsetX="-1" />
      <move select="U-Turn Right" offsetX="-2" offsetY="-.5" />
    </path>
    <path>
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5"/>
      <move select="Extend Left" beats="3" scaleY="2" />
      <move select="U-Turn Right" offsetX="-2" offsetY="-.5" />
    </path>
  </tam>

  <tam title="As Couples Right Roll to a Wave"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       parts="" >
    <path>
      <move select="Beau Wheel" reflect="-1" hands="gripleft" offsetX="-2" offsetY="-1.5" />
    </path>
    <path>
      <move select="Belle Wheel" reflect="-1" hands="gripright" offsetX="-2" offsetY="-.5" />
    </path>
    <path>
      <move select="Beau Wheel" reflect="-1" hands="gripleft" offsetX="-2" offsetY="-1.5" />
    </path>
    <path>
      <move select="Belle Wheel" reflect="-1" hands="gripright" offsetX="-2" offsetY="-.5" />
    </path>
  </tam>

  <tam title="As Couples Right Roll to a Wave"
       from="Two-Faced Lines"
       formation="Two-Faced Lines LH"
       parts="" >
    <path>
      <move select="Beau Wheel" reflect="-1" hands="gripleft" offsetX="-2" offsetY="-1.5" />
    </path>
    <path>
      <move select="Belle Wheel" reflect="-1" hands="gripright" offsetX="-2" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Left" beats="3" hands="right" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="3" hands="left" scaleX="2" scaleY="1.5" />
    </path>
  </tam>

  <tam title="All 8 Right Roll to a Wave"
       from="Couples Facing Out"
       formation="Static Facing Out"
       parts="" >
    <path>
      <move select="U-Turn Right" beats="4" offsetX="-3" />
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="-3" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" offsetX="-3" />
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="-3" />
    </path>
  </tam>
</tamination>
