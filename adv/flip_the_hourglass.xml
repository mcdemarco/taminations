<tamination>

  <tam title="Flip the Hourglass"
       from="Right-Hand Hourglass"
       formation="Hourglass RH BP"
       parts="" >
    <path numbers="3 6">
      <move select="Flip Right" />
    </path>
    <path numbers="1 8">
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path numbers="2 7">
      <move select="Flip Right" />
    </path>
    <path numbers="4 5">
      <move select="Extend Left" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Flip the Hourglass" from="Left-Hand Hourglass"
       formation="Hourglass LH BP">
    <path numbers="3 6">
      <move select="Flip Left"/>
    </path>
    <path numbers="1 8">
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path numbers="2 7">
      <move select="Flip Left"/>
    </path>
    <path numbers="4 5">
      <move select="Extend Right" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

</tamination>
