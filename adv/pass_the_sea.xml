<tamination>

  <tam title="Pass the Sea"
       from="Facing Couples"
       formation="Formation boy 1 2 270  girl -1 2 270">
    <path numbers="3 2">
      <move select="Extend Left" beats="2.5" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="3.5" scaleY="1.5" />
    </path>
    <path numbers="1 4">
      <move select="Extend Left" beats="2.5" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="3.5" scaleX="3" scaleY=".5" />
    </path>
  </tam>

  <tam title="Pass the Sea"
       from="Lines"
       formation="Normal Lines"
       parts="" >
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".5" />
    </path>
  </tam>

  <tam title="Pass the Sea"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       parts="" >
    <path>
      <move select="Extend Left" beats="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="1.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="As Couples Pass the Sea"
       from="Lines"
       formation="Normal Lines"
       group=" " >
    <path>
      <move select="Extend Left" beats="2" hands="right" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="3.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="left" scaleX="2" scaleY="1.5" />
      <move select="Lead Right" beats="4" scaleX=".5" scaleY="2.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="4" scaleX="2.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="left" scaleX="2" scaleY="1.5" />
      <move select="Lead Left" beats="4" scaleX="3.5" scaleY="1.5" />
    </path>
  </tam>

  <tam title="All 4 Couples Pass the Sea" group=" " from="Static Square" formation="Static Square">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2" />
      <move select="Forward" />
      <move select="Lead Right" beats="3" scaleY="3"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="3"/>
      <move select="Forward"/>
      <move select="Lead Left" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2" />
      <move select="Forward" />
      <move select="Lead Right" beats="3" scaleY="3"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="3"/>
      <move select="Forward"/>
      <move select="Lead Left" beats="2" scaleX="2" scaleY="2"/>
    </path>
  </tam>

</tamination>
