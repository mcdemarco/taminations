<tamination>
  
  
  

  <tam title="Reverse Swap Around" 
       from="Facing Couples"
       formation="Facing Couples"
       parts="2" >
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Flip Left" beats="4" />
    </path>
  </tam>

  <tam title="Reverse Swap Around" 
       from="Normal Lines"
       formation="Normal Lines"
       parts="2" >
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Flip Left" beats="4" />
    </path>
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Flip Left" beats="4" />
    </path>
  </tam>

  <tam title="Reverse Swap Around" 
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       parts="2" >
    <path>
      <move select="Forward 2" beats="4" />
    </path>
    <path>
      <move select="Flip Left" beats="4" />
    </path>
    <path>
      <move select="Forward 2" beats="4" />
    </path>
    <path>
      <move select="Flip Left" beats="4" />
    </path>
  </tam>

  <tam title="As Couples Reverse Swap Around" 
       from="Normal Lines"
       formation="Normal Lines"
       parts="2" >
    <path>
      <move select="Forward 4" hands="right" />
    </path>
    <path>
      <move select="Forward 4" hands="left" />
    </path>
    <path>
      <move select="Flip Left" beats="4" hands="gripright" />
    </path>
    <path>
      <move select="Run Left" beats="4" hands="gripleft" scaleY="3" />
    </path>
  </tam>

  <tam title="All 8 Reverse Swap Around" 
       from="Static Square"
       formation="Static Square"
       parts="3" >
    <path>
      <move select="Forward 6" />
    </path>
    <path>
      <move select="Flip Left" beats="6" />
    </path>
    <path>
      <move select="Forward 6" />
    </path>
    <path>
      <move select="Flip Left" beats="6" />
    </path>
  </tam>
</tamination>
