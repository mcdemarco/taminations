<tamination>

  <tam title="Peel and Trail"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       parts="" >
    <path numbers="6 3">
      <move select="Run Left" offsetX="-1" />
    </path>
    <path numbers="8 1">
      <move select="Forward" />
      <move select="Swing Right" />
    </path>
    <path numbers="2 7">
      <move select="Run Left" offsetX="-1" />
    </path>
    <path numbers="4 5">
      <move select="Forward" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Peel and Trail"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       parts="" >
    <path>
      <move select="Forward" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Run Right" offsetX="-1" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Run Right" offsetX="-1" />
    </path>
  </tam>

  <tam title="Peel and Trail"
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru"
       parts="" >
    <path numbers="5 4">
      <move select="Run Right" offsetX="-1" />
    </path>
    <path numbers="6 3">
      <move select="Run Left" offsetX="-1" />
    </path>
    <path numbers="7 2">
      <move select="Run Left" offsetX="1" />
    </path>
    <path numbers="8 1">
      <move select="Flip Right" offsetX="1" />
    </path>
    <taminator>
      Some dancers in the trailing position perform a partner trade, with the
      beau passing in front of the belle.  This animation shows the movement
      as defined, with the belle passing in front of the beau.
    </taminator>
  </tam>

  <tam title="Peel and Trail"
       from="Two-Faced Lines"
       formation="Two-Faced Lines RH"
       parts="" >
    <path>
      <move select="Flip Right" offsetX="2" offsetY="0.5" />
    </path>
    <path>
      <move select="Run Left" offsetX="2" offsetY="-0.5" />
    </path>
    <path>
      <move select="Flip Right" offsetX="-2" offsetY="1.5" />
    </path>
    <path>
      <move select="Flip Left" offsetX="-2" offsetY="-1.5"/>
    </path>
  </tam>

  <tam title="Peel and Trail"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG"
       parts="" >
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".625" />
    </path>
    <path>
      <move select="Flip Left" beats="5" offsetX="-2" offsetY="-1.5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".625" />
    </path>
    <path>
      <move select="Flip Left" beats="5" offsetX="-2" offsetY="-1.5" />
    </path>
  </tam>

  <tam title="Peel and Trail"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG"
       parts="" >
    <path>
      <move select="Flip Right" beats="5" offsetX="-2" offsetY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".625" />
    </path>
    <path>
      <move select="Flip Right" beats="5" offsetX="-2" offsetY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".625" />
    </path>
  </tam>

  <tam title="Peel and Trail" from="Z Facing Out"
       formation="Formation boy 0 1 0 girl 2 1 0">
    <path numbers="2 3">
      <move select="Swing Right"/>
    </path>
    <path numbers="4 1">
      <move select="Run Left" offsetX="-2"/>
    </path>
  </tam>

  <tam title="Peel and Trail" from="Z Facing In"
       formation="Formation boy 0 1 0 girl 2 -1 180">
    <path numbers="2 3">
      <move select="Run Left"/>
    </path>
    <path numbers="4 1">
      <move select="Forward 2"/>
      <move select="Swing Right"/>
    </path>
  </tam>

  <tam title="As Couples Peel and Trail"
       from="Two-Faced Lines"
       formation="Two-Faced Lines RH"
       parts="" >
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Swing Right" beats="3" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Right" beats="3" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Belle Wheel" hands="gripleft" beats="5" offsetX="-2" offsetY=".5" />
    </path>
    <path>
      <move select="Beau Wheel" hands="gripright" beats="5" offsetX="-2" offsetY="1.5" />
    </path>
  </tam>

  <tam title="All 8 Peel and Trail"
       from="Mini-Waves"
       formation="Static MiniWaves RH"
       parts="" >
    <path>
      <move select="Forward 3" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Run Left" beats="6" offsetX="-3" />
    </path>
    <path>
      <move select="Forward 3" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Run Left" beats="6" offsetX="-3" />
    </path>
  </tam>
</tamination>
