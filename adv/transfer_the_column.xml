<tamination>

  <tam title="Transfer the Column"
       from="Right-Hand Columns"
       formation="Formation girl -1 3 90 boy -1 -1 90 girl -1 1 90 boy -1 -3 90"
       parts="" >
    <path numbers="1 5">
      <move select="Run Right" beats="3" scaleY="2" />
      <move select="Forward 4" />
      <move select="Lead Right" beats="2" scaleX="2" />
    </path>
    <path numbers="3 7">
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path numbers="2 6">
      <move select="Forward 2" />
      <move select="Run Right" beats="3" scaleY="2" />
      <move select="Lead Right" beats="2" scaleX="2" />
    </path>
    <path numbers="4 8">
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Transfer the Column"
       from="Left-Hand Columns"
       formation="Formation girl -1 -3 270 boy -1 1 270 girl -1 -1 270 boy -1 3 270"
       parts="" >
    <path numbers="1 5">
      <move select="Run Left" beats="3" scaleY="2" />
      <move select="Forward 4" />
      <move select="Lead Left" beats="2" scaleX="2" />
    </path>
    <path numbers="3 7">
      <move select="Forward 2" />
      <move select="Swing Left" scaleX=".5" />
      <move select="Hinge Left" scaleX=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path numbers="2 6">
      <move select="Forward 2" />
      <move select="Run Left" beats="3" scaleY="2" />
      <move select="Lead Left" beats="2" scaleX="2" />
    </path>
    <path numbers="4 8">
      <move select="Forward 2" />
      <move select="Swing Left" scaleX=".5" />
      <move select="Hinge Left" scaleX=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
    </path>
  </tam>
</tamination>
