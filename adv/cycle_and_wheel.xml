<tamination>

  <tam title="Cycle and Wheel"
       from="3 and 1 lines #1"
       formation="Formation boy -2 3 0 girl -2 1 180 girl -2 -1 180 boy -2 -3 180"
       parts="" >
    <path>
      <move select="Run Right" beats="4" offsetX="1" offsetY="-2" />
    </path>
    <path>
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="left" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="right" scaleX="2" scaleY="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Cycle and Wheel"
       from="3 and 1 lines #2"
       formation="Formation boy -2 3 180 girl -2 1 0 girl -2 -1 180 boy -2 -3 180"
       parts="" >
    <path>
      <move select="Run Left" beats="4" offsetX="-1" offsetY="2" />
    </path>
    <path>
      <move select="U-Turn Left" beats="2" offsetX=".5" />
      <move select="U-Turn Left" beats="2" offsetX="-.5" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="left" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="right" scaleX="2" scaleY="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Cycle and Wheel"
       from="3 and 1 lines #3"
       formation="Formation boy -2 3 180 girl -2 1 180 girl -2 -1 0 boy -2 -3 180"
       parts="" >
    <path numbers="5 4">
      <move select="Run Left" beats="4" hands="left" scaleY="2" offsetX="-1" />
    </path>
    <path numbers="6 3">
      <move select="U-Turn Left" beats="4" hands="right" offsetX="-1" />
    </path>
    <path numbers="7 2">
      <move select="U-Turn Right" beats="2" offsetX="-.5" />
      <move select="U-Turn Right" beats="2" offsetX=".5" />
    </path>
    <path numbers="8 1">
      <move select="Run Right" beats="4" offsetX="1" offsetY="-2" />
    </path>
  </tam>

  <tam title="Cycle and Wheel"
       from="3 and 1 lines #4"
       formation="Formation boy -2 3 180 girl -2 1 180 girl -2 -1 180 boy -2 -3 0"
       parts="" >
    <path>
      <move select="Run Left" beats="4" hands="left" scaleX="2" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="right" offsetX="1" />
    </path>
    <path>
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
    </path>
    <path>
      <move select="Run Left" beats="4" offsetX="1" offsetY="2" />
    </path>
  </tam>

  <tam title="Cycle and Wheel" from="Tidal 3 and 1 Lines"
       formation="Formation boy 0 -3.5 0 girl 0 -2.5 180 boy 0 -1.5 180 girl 0 -.5 180">
    <path>
      <move select="Run Left" beats="4" offsetX="2" offsetY=".5" />
    </path>
    <path>
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".75" offsetX="-1" />
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="right" offsetX="2" offsetY="-.5"/>
    </path>
    <path>
      <move select="Run Left" beats="4" hands="left" scaleX="1.5" scaleY="1.25" offsetX="2" />
    </path>
  </tam>


</tamination>
