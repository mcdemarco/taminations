<tamination>

  <tam title="Pass and Roll Your Neighbor" from="Single Column"
       formation="Formation boy -3 0 0 girl -1 0 180">
    <path numbers="1 4">
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Right" />
      <move select="Quarter Right" />
      <move select="Quarter Right" />
    </path>
    <path numbers="2 3">
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Pass and Roll Your Neighbor"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       parts="" >
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Flip Right" scaleX=".5" scaleY=".5" />
      <move select="Quarter Right" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" />
      <move select="Quarter Right" />
      <move select="Quarter Right" offsetY="-1" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" scaleY="1.5" />
    </path>
  </tam>

  <tam title="All 8 Pass and Roll Your Neighbor and Spread"
       from="Facing Dancers"
       formation="Static Facing"
       parts="" >
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5" />
      <move select="Swing Right" />
      <move select="Forward 2" />
      <move select="Lead Right" beats="3" />
      <move select="Lead Right" beats="3" />
      <move select="Lead Right" beats="2.5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 4" beats="6" />
      <move select="Swing Right" />
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5" />
      <move select="Swing Right" />
      <move select="Forward 2" />
      <move select="Lead Right" beats="3" />
      <move select="Lead Right" beats="3" />
      <move select="Lead Right" beats="2.5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 4" beats="6" />
      <move select="Swing Right" />
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
  </tam>
</tamination>
