<tamination>

  <tam title="Cast a Shadow"
       from="Right-Hand Waves"
       formation="Ocean Waves RH GBBG"
       parts="1.5;4" >
    <path>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".75" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" offsetX="2" offsetY=".75" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Lead Right" beats="3" offsetX="1" />
      <move select="Quarter Right" offsetX="1" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Hinge Left" beats="3.5" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="U-Turn Left" beats=".5" offsetY=".75" />
      <move select="Forward 2" beats="1" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" offsetX="2" offsetY="-1.25" />
    </path>
  </tam>

  <tam title="Cast a Shadow"
       from="Left-Hand Waves"
       formation="Ocean Waves LH GBBG"
       parts="" >
    <path>
      <move select="U-Turn Right" beats=".5" offsetY="-.75" />
      <move select="Forward 2" beats="1" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" offsetX="2" offsetY="1.25" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Hinge Right" beats="3.5" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Lead Left" />
      <move select="Lead Left" beats="3" offsetX="1" />
      <move select="Quarter Left" offsetX="1" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".75" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" offsetX="2" offsetY="-.75" />
    </path>
  </tam>

  <tam title="Cast a Shadow"
       from="Right-Hand Two-Faced Lines"
       formation="Formation boy 3 2 270 girl 1 2 270 girl -1 2 90 boy -3 2 90"
       parts="" >
    <path numbers="7 2">
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".75" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" offsetX="2" offsetY=".75" />
    </path>
    <path numbers="5 4">
      <move select="Forward 2" />
      <move select="Hinge Right" beats="3.5" />
      <move select="Forward 2" />
    </path>
    <path numbers="3 6">
      <move select="Lead Left" />
      <move select="Lead Left" beats="3" offsetX="1" />
      <move select="Quarter Left" offsetX="1" />
      <move select="Forward 2" />
    </path>
    <path numbers="1 8">
      <move select="U-Turn Left" beats=".5" offsetY=".75" />
      <move select="Forward 2" beats="1" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" offsetX="2" offsetY="-1.25" />
    </path>
  </tam>

  <tam title="Cast a Shadow"
       from="Left-Hand Two-Faced Lines"
       formation="Formation girl 3 2 90 boy 1 2 90 boy -1 2 270 girl -3 2 270"
       parts="" >
    <path numbers="7 2">
      <move select="U-Turn Right" beats=".5" offsetY="-.75" />
      <move select="Forward 2" beats="1" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" offsetX="2" offsetY="1.25" />
    </path>
    <path numbers="5 4">
      <move select="Lead Right" />
      <move select="Lead Right" beats="3" offsetX="1" />
      <move select="Quarter Right" offsetX="1" />
      <move select="Forward 2" />
    </path>
    <path numbers="3 6">
      <move select="Forward 2" />
      <move select="Hinge Left" beats="3.5" />
      <move select="Forward 2" />
    </path>
    <path numbers="1 8">
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".75" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" offsetX="2" offsetY="-.75" />
    </path>
  </tam>

  <tam title="Cast a Shadow"
       from="Three and One Lines"
       formation="Formation boy -2 3 0 girl -2 1 180 girl -2 -1 180 boy -2 -3 180"
       parts="" >
    <path>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".75" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" offsetX="2" offsetY=".75" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Lead Right" beats="3" offsetX="1" />
      <move select="Quarter Right" offsetX="1" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Lead Left" />
      <move select="Lead Left" beats="3" offsetX="1" />
      <move select="Quarter Left" offsetX="1" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="U-Turn Left" beats=".5" offsetY=".75" />
      <move select="Forward 2" beats="1" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" offsetX="2" offsetY="-1.25" />
    </path>
  </tam>
</tamination>
