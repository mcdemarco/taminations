<tamination>

  <tam title="Once Removed Boys Run" group="Once Removed"
        formation="Formation girl -2 3 0 boy -2 -1 180 girl -2 1 0 boy -2 -3 180">
    <path>
      <move select="Dodge Right" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Dodge Right" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="5" scaleY="2"/>
    </path>
  </tam>

  <tam title="Once Removed Chase Right" group="Once Removed" formation="Lines Facing Out" from="">
  <path>
    <move select="U-Turn Right" offsetX="-2"/>
    <move select="Forward 2"/>
    <move select="Run Right" beats="5" scaleY="2"/>
  </path>
  <path>
    <move select="U-Turn Right" offsetX="-2"/>
    <move select="Forward 2"/>
    <move select="Run Right" beats="5" scaleY="2"/>
  </path>
  <path>
    <move select="Run Right" beats="5" scaleY="2"/>
    <move select="Forward 4"/>
  </path>
  <path>
    <move select="Run Right" beats="5" scaleY="2"/>
    <move select="Forward 4"/>
  </path>
  </tam>

  <tam title="Once Removed Partner Trade" group="Once Removed" formation="Lines Facing Out">
    <path>
      <move select="Flip Left" beats="6" scaleY="2"/>
    </path>
    <path>
      <move select="Flip Left" beats="6" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="6" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="6" scaleY="2"/>
    </path>
  </tam>

  <tam title="Once Removed Pass the Ocean" group="Once Removed"
       formation="Normal Lines">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="1.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Lead Left" beats="4" scaleY="2.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Lead Left" beats="4" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Once Removed Right and Left Thru" group="Once Removed"
       formation="Double Pass Thru">
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Beau Wheel" scaleX="0.5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Belle Wheel" scaleX="0.5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Beau Wheel" scaleX="0.5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Belle Wheel" scaleX="0.5"/>
    </path>
  </tam>

  <tam title="Once Removed Slide Thru" group="Once Removed"
       formation="Double Pass Thru">
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Quarter Left" offsetX="1" offsetY="-1"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Quarter Left" offsetX="1" offsetY="-1"/>
    </path>
  </tam>

  <tam title="Once Removed Touch a Quarter" group="Once Removed"
       formation="Double Pass Thru">
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Quarter Right" offsetX="1" offsetY="-1"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Quarter Right" offsetX="1" offsetY="-1"/>
    </path>
  </tam>

  <tam title="Once Removed Walk and Dodge (from Columns)" group="Once Removed"
       formation="Formation girl -1 3 90  boy -1 1 90  girl -1 -1 90  boy -1 -3 90">
  <path numbers="1 8">
    <move select="Dodge Right" beats="4"/>
  </path>
  <path numbers="2 7">
    <move select="Dodge Right" beats="4"/>
  </path>
  <path numbers="3 6">
    <move select="Forward 4"/>
  </path>
  <path numbers="4 5">
    <move select="Forward 4"/>
  </path>
  </tam>

  <tam title="Once Removed Walk and Dodge (from Lines)" group="Once Removed"
       formation="Two-Faced Lines RH">
    <path numbers="1 8">
      <move select="Forward 4" hands="right"/>
    </path>
    <path numbers="2 7">
      <move select="Forward 4" hands="left"/>
    </path>
    <path numbers="3 6">
      <move select="Dodge Right" beats="4" hands="left" scaleY="2"/>
    </path>
    <path numbers="4 5">
      <move select="Dodge Right" beats="4" hands="right" scaleY="2"/>
    </path>
  </tam>

</tamination>
