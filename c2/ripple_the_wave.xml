<tamination>
  
  

  <tam title="Ends Ripple the Wave"
       from="Right-Hand Wave"
       formation="Wave RH"
       parts="" >
    <path>
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Stand" beats="3" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Very Ends Ripple the Wave"
       from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB"
       parts="" >
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Stand" beats="15" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Stand" beats="3" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Stand" beats="9" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Stand" beats="6" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Stand" beats="3" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
    </path>
  </tam>
</tamination>
