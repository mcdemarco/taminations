<tamination>
  
  

  <tam title="Crazy Box Circulate" group="Crazy"
       from=""
       formation="Ocean Waves RH BGBG"
       parts="3;3;3" >
    <path>
      <move select="Forward 4" beats="3" />
      <move select="Stand" beats="3" />
      <move select="Run Right" />
      <move select="Forward 4" beats="3" />
    </path>
    <path>
      <move select="Run Right" />
      <move select="Stand" beats="3" />
      <move select="Forward 4" beats="3" />
      <move select="Stand" beats="3" />
    </path>
    <path>
      <move select="Forward 4" beats="3" />
      <move select="Run Left" />
      <move select="Forward 4" beats="3" />
      <move select="Run Left" />
    </path>
    <path>
      <move select="Run Right" />
      <move select="Forward 4" beats="3" />
      <move select="Run Right" />
      <move select="Stand" beats="3" />
    </path>
  </tam>

  <tam title="Crazy Mix" group="Crazy"
       from=""
       formation="Tidal Wave RH BGGB"
       parts="3;3;3" >
    <path>
      <move select="Dodge Right" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Dodge Left" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Dodge Right" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Run Right" beats="2" scaleY=".5" />
      <move select="Stand" beats="3" />
    </path>
    <path>
      <move select="Run Left" />
      <move select="Run Right" />
      <move select="Run Left" scaleX="2" />
      <move select="Stand" beats="3" />
    </path>
    <path>
      <move select="Run Left" />
      <move select="Stand" beats="3" />
      <move select="Dodge Left" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Flip Left" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Dodge Right" beats="1" scaleX=".5" scaleY=".5"/>
      <move select="Swing Right" beats="2" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Dodge Right" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Stand" beats="3" />
      <move select="Run Right" />
      <move select="Run Left" />
    </path>
  </tam>


  <tam title="Crazy Trade" group="Crazy"
       from=""
       formation="Lines Facing Out"
       parts="3;3;3" >
    <path>
      <move select="Flip Left" />
      <move select="Run Right" />
      <move select="Swing Left" />
      <move select="Stand" beats="3" />
    </path>
    <path>
      <move select="Run Right" />
      <move select="Stand" beats="3" />
      <move select="Swing Right" />
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Flip Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
      <move select="Run Right" />
    </path>
    <path>
      <move select="Run Right" />
      <move select="Flip Left" />
      <move select="Swing Right" />
      <move select="Stand" beats="3" />
    </path>
  </tam>

</tamination>
