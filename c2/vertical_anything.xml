<tamination>

  <tam title="Vertical Dixie Style to a Wave" group="Vertical"
       from="" formation="Formation girl 1 2 90 boy -1 2 90">
  <path numbers="3 2">
      <move select="Flip Left" offsetX="-1" offsetY="-1"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Hinge Left" scaleY=".5"/>
  </path>
  <path numbers="1 4">
      <move select="U-Turn Right" offsetX="1" offsetY="-1"/>
      <move select="Stand" beats="2"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Hinge Left" scaleY=".5"/>
  </path>
  </tam>

  <tam title="Vertical Grand Chain Eight" group="Vertical"
       formation="Formation girl 3 2 90 boy 1 2 90 girl -1 2 90 boy -3 2 90">
    <path numbers="7 2">
      <move select="Flip Left" offsetX="-1" offsetY="-1"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5"/>
      <move select="Hinge Left"/>
    <move select="U-Turn Left"/>
    </path>
    <path numbers="5 4">
      <move select="U-Turn Right" offsetX="1" offsetY="-1"/>
    <move select="Stand" beats="2"/>
    <move select="Extend Right"/>
    <move select="Hinge Left"/>
    <move select="U-Turn Left"/>
    </path>
    <path numbers="3 6">
      <move select="Flip Left" offsetX="-1" offsetY="-1"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5"/>
      <move select="Hinge Left"/>
    </path>
    <path numbers="1 8">
      <move select="U-Turn Right" offsetX="1" offsetY="-1"/>
    <move select="Stand" beats="2"/>
    <move select="Extend Right"/>
    <move select="Hinge Left"/>
    </path>
  </tam>

</tamination>
