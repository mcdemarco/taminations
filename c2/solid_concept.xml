<tamination>

  <tam title="Groups of 4 work Solid, Touch a Quarter" group=" "
       formation="Double Pass Thru">
    <path>
      <move select="Extend Left" beats="2" hands="right" scaleY="2"/>
      <move select="Forward" hands="right"/>
      <move select="Counter Rotate Right 4 -2" hands="right" beats="4" offsetY="1"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="left" scaleY="2"/>
      <move select="Forward" hands="left"/>
      <move select="Counter Rotate Right 2 0" hands="both" beats="4" offsetY="1"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" scaleY="2"/>
      <move select="Forward" hands="right"/>
      <move select="Counter Rotate Right 2 -4" hands="right" beats="4" offsetY="-1"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="left" scaleY="2"/>
      <move select="Forward" hands="left"/>
      <move select="Counter Rotate Right 0 -2" hands="both" beats="4" offsetY="-1"/>
    </path>
  </tam>

  <tam title="Centers work Solid, all Swing Thru" group=" "
       formation="Inverted Lines Centers Out">
    <path>
      <move select="Swing Right" beats="4" scaleX="1.5" scaleY="2"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="U-Turn Right" hands="both" beats="4"/>
    </path>
    <path>
      <move select="Swing Right" beats="4" scaleX="1.5" scaleY="2"/>
    </path>
    <path>
      <move select="Stand" beats="4"/>
      <move select="Swing Left"/>
    </path>
  </tam>

  <tam title="Lines of 3 work Solid, all Diamond Circulate" group=" "
       formation="Formation boy 0 5 0 girl 0 3 0 boy 3 0 270 girl 0 1 0">
    <path>
      <move select="Lead Right" beats="5" hands="right" scaleX="6" scaleY="5"/>
    </path>
    <path>
      <move select="Lead Right" beats="5" hands="both" scaleX="4" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Right" beats="5" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Right" beats="5" hands="left" scaleX="2"/>
    </path>
  </tam>

  <tam title="Outside Triangles work Solid, all Mix" group=" "
       formation="Formation boy -1 -3 180 girl 0 -1 0 boy 1 -3 180 girl 0 -5 180">
    <path>
      <move select="Dodge Right"/>
      <move select="Counter Rotate Right 0 -2" beats="3" hands="right"/>
      <move select="Counter Rotate Right 0 -2" beats="3" hands="right"/>
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Dodge Right"/>
      <move select="Counter Rotate Right 2 0" beats="3" hands="right"/>
      <move select="Counter Rotate Right 2 0" beats="3" hands="right"/>
    </path>
    <path>
      <move select="Dodge Right"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3"/>
    </path>
  </tam>

  <tam title="Tandem-Based Triangle work Solid, all Flip the Diamond" group=" "
       from="Galaxy" formation="Galaxy RH GP">
    <path>
      <move select="Counter Rotate Right 0 -2" beats="4" offsetX="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" beats="4" offsetX="2"/>
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="5.2" scaleY="3.1"/>
    </path>
  </tam>

</tamination>
