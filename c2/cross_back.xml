<tamination>

  <tam title="Cross Back"
       from="Right-Hand Box"
       formation="Box RH" >
    <path numbers="1 4">
      <move select="Extend Right" hands="left" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
    <path numbers="2 3">
      <move select="U-Turn Right" />
    </path>
  </tam>

  <tam title="Cross Back"
       from="Left-Hand Box"
       formation="Box LH" >
    <path numbers="1 4">
      <move select="U-Turn Left" />
    </path>
    <path numbers="2 3">
      <move select="Extend Left" hands="right" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
  </tam>
</tamination>
