<tamination>

  <tam title="Criss Cross Your Neighbor"
       from="Right-Hand Box"
       formation="Box RH" >
    <path numbers="1 4">
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.75" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".75" />
    </path>
    <path numbers="2 3">
      <move select="Run Right" scaleY="1.5" />
      <move select="Forward 2" />
      <move select="Lead Right" beats="3" scaleY="2" />
    </path>
  </tam>

  <tam title="Criss Cross Your Neighbor"
       from="Left-Hand Box"
       formation="Box LH"
       parts="" >
    <path>
      <move select="Run Left" scaleY="1.5" />
      <move select="Forward 2" />
      <move select="Lead Left" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.75" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY=".75" />
    </path>
  </tam>
</tamination>
