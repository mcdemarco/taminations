<tamination>
  
  

  <tam title="3 by 1 Interlocked Triangle Circulate" from="Interlocked 3 by 1 Triangles"
       formation="Formation boy -3 1 0 girl -3 -1 180 boy 0 -1 180 girl 0 -3 180">
    <path>
      <move select="Forward 3" beats="6"/>
    </path>
    <path>
      <move select="Run Right" beats="6" offsetX="-3" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 3" beats="6"/>
    </path>
    <path>
      <move select="Run Right" beats="6" offsetX="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="3 by 1 Interlocked Triangle Circulate" from="&quot;H&quot; formation"
       formation="Formation boy -3 3 0 girl -3 -3 180 boy 0 -1 180 girl 0 -3 180">
    <path>
      <move select="Forward 3" beats="6"/>
    </path>
    <path>
      <move select="Run Right" beats="6" offsetX="-3" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="6" offsetX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 3" beats="6"/>
    </path>
  </tam>

</tamination>
