<tamination>
  
  

  <tam title="3 by 1 Triangle Circulate"
       from="Wave Between Mini-Waves"
       formation="Formation boy -3 1 180 girl -3 -1 0 boy 0 -3 180 girl 0 -1 0"
       parts="" >
    <path>
      <move select="Flip Right" beats="5" offsetX="-3" />
    </path>
    <path>
      <move select="Forward 3" beats="5" />
    </path>
    <path>
      <move select="Run Right" beats="5" offsetX="3" />
    </path>
    <path>
      <move select="Forward 3" beats="5" />
    </path>
  </tam>

  <tam title="3 by 1 Triangle Circulate"
       from="Quarter Tag"
       formation="Quarter Tag"
       parts="" >
    <path>
      <move select="Extend Left" beats="5" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Forward 3" beats="5" />
    </path>
    <path>
      <move select="Run Right" beats="5" offsetX="3" />
    </path>
    <path>
      <move select="Forward 3" beats="5" />
    </path>
  </tam>

  <tam title="3 by 1 Triangle Circulate"
       from="Left-Hand Quarter Tag"
       formation="Quarter Tag LH"
       parts="" >
    <path>
      <move select="Extend Left" beats="5" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Extend Left" beats="2.5" scaleX="1.5" scaleY=".5" />
      <move select="Extend Right" beats="2.5" scaleX="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" beats="5" offsetX="3" />
    </path>
    <path>
      <move select="Extend Left" beats="2.5" scaleX="1.5" scaleY=".5" />
      <move select="Extend Right" beats="2.5" scaleX="1.5" scaleY=".5" />
    </path>
  </tam>
</tamination>
