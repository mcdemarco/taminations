<tamination>
  
  

  <tam title="Flip Your Neighbor"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="5.5" >
    <path>
      <move select="Lead Right" />
      <move select="Forward 4" />
      <move select="Lead Right" beats="2.5" scaleX="2" />
      <move select="Run Right" beats="4" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Run Right" beats="4" hands="nohands" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Hinge Right" scaleY=".75" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Run Right" beats="4" hands="nohands" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Hinge Right" scaleY=".75" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Forward 4" />
      <move select="Lead Right" beats="2.5" scaleX="2" />
      <move select="Run Right" beats="4" scaleY=".5" />
    </path>
  </tam>

  <tam title="Flip Your Neighbor"
       from="Left-Hand Waves"
       formation="Ocean Waves LH GBBG"
       parts="5.5" >
    <path>
      <move select="Lead Left" />
      <move select="Forward 4" />
      <move select="Lead Left" beats="2.5" scaleX="2" />
      <move select="Run Left" beats="4" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Left" />
      <move select="Run Left" beats="4" hands="nohands" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Hinge Left" scaleY=".75" />
    </path>
    <path>
      <move select="Lead Left" />
      <move select="Run Left" beats="4" hands="nohands" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Hinge Left" scaleY=".75" />
    </path>
    <path>
      <move select="Lead Left" />
      <move select="Forward 4" />
      <move select="Lead Left" beats="2.5" scaleX="2" />
      <move select="Run Left" beats="4" scaleY=".5" />
    </path>
  </tam>
