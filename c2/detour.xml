<tamination>

  <tam title="Detour"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="" >
    <path>
      <move select="Forward 2" />
      <move select="Hinge Left" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Left" beats="3.5" hands="left" offsetX="-1" offsetY="2" />
    </path>
    <path>
      <move select="Quarter Left" beats="3.5" hands="left" offsetX="3" />
    </path>
    <path>
      <move select="Run Left" beats="2" offsetX="-2" offsetY="-1" />
      <move select="Hinge Left" />
    </path>
  </tam>

  <tam title="Detour"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path numbers="1 8">
      <move select="Forward 2" />
      <move select="Hinge Left" offsetY="-1" />
    </path>
    <path numbers="2 7">
      <move select="Quarter Right" beats="3.5" hands="right" offsetX="3" />
    </path>
    <path numbers="3 6">
      <move select="Quarter Right" beats="3.5" hands="right" offsetX="-1" offsetY="-2" />
    </path>
    <path numbers="4 5">
      <move select="Run Left" beats="2" offsetX="-2" offsetY="-1" />
      <move select="Hinge Left" />
    </path>
  </tam>

  <tam title="Detour"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="" >
    <path>
      <move select="Run Right" beats="2" offsetX="-2" offsetY="1" />
      <move select="Hinge Right" />
    </path>
    <path>
      <move select="Quarter Right" beats="3.5" hands="right" offsetX="3" />
    </path>
    <path>
      <move select="Quarter Right" beats="3.5" hands="right" offsetX="-1" offsetY="-2" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Hinge Right" offsetY="1" />
    </path>
  </tam>

  <tam title="Detour"
       from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH"
       parts="" >
    <path>
      <move select="Run Right" beats="2" offsetX="-2" offsetY="1" />
      <move select="Hinge Right" />
    </path>
    <path>
      <move select="Quarter Left" beats="3.5" hands="left" offsetX="-1" offsetY="2" />
    </path>
    <path>
      <move select="Quarter Left" beats="3.5" hands="left" offsetX="3" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Hinge Right" offsetY="1" />
    </path>
  </tam>
</tamination>
