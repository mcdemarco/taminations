<tamination>

  <tam title="Bounce the Centers" group=" "
       from="Right-Hand Two-Faced Line"
       formation="Two-Faced Line RH"
       parts="2" >
    <path numbers="1 4">
      <move select="Extend Right" beats="2" hands="right" scaleX="2" scaleY="2" />
    </path>
    <path numbers="2 3">
      <move select="Extend Right" beats="2" hands="left" scaleX="2" scaleY="2" />
      <move select="U-Turn Right"/>
    </path>
  </tam>

  <tam title="Bounce the Boys" from="Right-Hand Two-Faced Lines" group=" "
       formation="Two-Faced Lines RH" parts="2">
    <path>
      <move select="Lead Right" beats="2" hands="right" scaleY="2" />
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
    </path>
    <path>
      <move select="Lead Right" beats="2" hands="right" scaleY="2" />
      <move select="Quarter Right"/>
    </path>
  </tam>

  <tam title="As Couples Bounce the Ends" group=" " parts="3"
       formation="Tidal Line RH">
    <path>
      <move select="Extend Right" beats="3" hands="right" scaleX="2" scaleY=".5" />
      <move select="Beau Reverse Wheel"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" hands="both" scaleX="2" scaleY="1.5" />
      <move select="Belle Reverse Wheel"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" hands="both" scaleX="2" scaleY="2.5" />
    </path>
    <path>
      <move select="Extend Right" beats="3" hands="left" scaleX="2" scaleY="3.5" />
    </path>
  </tam>

  <tam title="Tandem Bounce the Centers" group=" " parts="3" formation="Two-Faced Lines RH">
    <path>
      <move select="Forward 2" beats="1" hands="right"/>
      <move select="Extend Right" beats="2" hands="right" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2" beats="1" hands="left"/>
      <move select="Extend Right" beats="2" hands="left" scaleY="2"/>
      <Movement beats="4" hands="none"
         cx1="0" cy1="1.4" cx2="2" cy2="1.4" x2="2" y2="0"
         cx3="1" cx4="1" cy4="-1" x4="0" y4="-1" />
    </path>
    <path>
      <move select="Extend Right" beats="3" hands="left" scaleY="2"/>
      <Movement beats="4" hands="none"
         cx1="0" cy1="-1.4" cx2="-2" cy2="-1.4" x2="-2" y2="0"
         cx3="1" cx4="1" cy4="-1" x4="0" y4="-1" />
    </path>
    <path>
      <move select="Extend Right" beats="3" hands="right" scaleY="2"/>
    </path>
  </tam>

</tamination>
