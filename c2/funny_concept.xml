<tamination>

  <tam title="Funny Box Circulate 2" group="Funny" parts="3"
       formation="Formation boy 3 2 270 girl 1 2 270 girl -1 2 180 boy -3 2 90">
    <path numbers="7 2">
      <move select="Stand" beats="3"/>
      <move select="Forward 4"/>
    </path>
    <path numbers="5 4">
      <move select="Stand" beats="3"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path numbers="3 6">
    <move select="Forward 2" beats="3"/>
    <move select="Run Left" beats="4" scaleY="2"/>
    </path>
    <path numbers="1 8">
      <move select="Run Right"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Funny Diamond Circulate" group="Funny"
       formation="Formation boy -3 0 90 girl -2 3 0 boy -1 0 270 girl -2 -3 0">
  <path numbers="1 8">
  </path>
  <path numbers="2 7">
  </path>
  <path numbers="4 5">
      <move select="Forward 2" />
      <move select="Lead Right" />
  </path>
  <path numbers="3 6">
      <move select="Quarter Left" beats="1" />
      <move select="Forward" />
      <move select="Extend Right" scaleX="2" beats="2" />
  </path>
  </tam>

  <tam title="Funny Slide Thru 9 Times" group="Funny" parts="3;3;3;3;3;3;3;3"
       from="" formation="Formation girl -3 1 0 boy 0 -3 90 girl -3 -1 0  boy 0 -1 90">
    <path>
      <!-- girl starting as beau -->
      <move select="Stand" beats="3"/>
      <move select="Stand" beats="3"/>
      <move select="Stand" beats="3"/>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
          <move select="Quarter Left" beats="1.5" offsetX="1.5" offsetY="-.5"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
          <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="-.5"/>
      <move select="Stand" beats="3"/>
      <move select="Stand" beats="3"/>
      <move select="Stand" beats="3"/>
    </path>
    <path>
      <!-- trailing boy -->
      <move select="Stand" beats="3"/>
      <move select="Stand" beats="3"/>
      <move select="Stand" beats="3"/>
      <move select="Stand" beats="3"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
          <move select="Lead Right"  beats="1.5" scaleY=".5"/>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
          <move select="Lead Right"  beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Stand" beats="3"/>
      <move select="Stand" beats="3"/>
      <move select="Stand" beats="3"/>
    </path>
    <path>
      <!-- girl starting as belle -->
      <move select="Stand" beats="3"/>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
          <move select="Quarter Left" beats="1.5" offsetX="1.5" offsetY="-.5"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
          <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="-.5"/>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
          <move select="Quarter Left" beats="1.5" offsetX="1.5" offsetY="-.5"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
          <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="-.5"/>
      <move select="Stand" beats="3"/>
      <move select="Stand" beats="3"/>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
          <move select="Quarter Left" beats="1.5" offsetX="1.5" offsetY="-.5"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
          <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="-.5"/>
    </path>
    <path>
      <!-- leading boy -->
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
          <move select="Lead Right"  beats="1.5" scaleY=".5"/>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
          <move select="Lead Right"  beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Stand" beats="3"/>
      <move select="Stand" beats="3"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
          <move select="Lead Right"  beats="1.5" scaleY=".5"/>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
          <move select="Lead Right"  beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
          <move select="Lead Right"  beats="1.5" scaleY=".5"/>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
          <move select="Lead Right"  beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Stand" beats="3"/>
    </path>
