<tamination>
  
  

  <tam title="Box Recycle"
       from="Right-Hand Box"
       formation="Box RH"
       parts="" >
    <path>
      <move select="Swing Right" offsetX="2" offsetY="2" />
    </path>
    <path>
      <move select="Swing Right" offsetX="-2" offsetY="-2" />
    </path>
  </tam>

  <tam title="Split Recycle"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       parts="" >
    <path>
      <move select="Swing Right" offsetX="-1" offsetY="-2" />
    </path>
    <path>
      <move select="Swing Right" offsetX="1" offsetY="2" />
    </path>
    <path>
      <move select="Swing Right" offsetX="-1" offsetY="-2" />
    </path>
    <path>
      <move select="Swing Right" offsetX="1" offsetY="2" />
    </path>
  </tam>

  <tam title="Split Recycle"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       parts="" >
    <path>
      <move select="Swing Left" hands="gripleft" offsetX="1" offsetY="-2" />
    </path>
    <path>
      <move select="Swing Left" hands="gripleft" offsetX="-1" offsetY="2" />
    </path>
    <path>
      <move select="Swing Left" hands="gripleft" offsetX="1" offsetY="-2" />
    </path>
    <path>
      <move select="Swing Left" hands="gripleft" offsetX="-1" offsetY="2" />
    </path>
  </tam>

  <tam title="Split Recycle"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG"
       parts="" >
    <path>
      <move select="Swing Right" hands="gripright" offsetX="2" offsetY="1.5" />
    </path>
    <path>
      <move select="Swing Right" hands="gripright" offsetX="-2" offsetY="-.5" />
    </path>
    <path>
      <move select="Swing Right" hands="gripright" offsetX="2" offsetY="1.5" />
    </path>
    <path>
      <move select="Swing Right" hands="gripright" offsetX="-2" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Split Recycle"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG"
       parts="" >
    <path>
      <move select="Swing Left" hands="gripleft" offsetX="-2" offsetY=".5" />
    </path>
    <path>
      <move select="Swing Left" hands="gripleft" offsetX="2" offsetY="-1.5" />
    </path>
    <path>
      <move select="Swing Left" hands="gripleft" offsetX="-2" offsetY=".5" />
    </path>
    <path>
      <move select="Swing Left" hands="gripleft" offsetX="2" offsetY="-1.5" />
    </path>
  </tam>

  <tam title="Split Recycle"
       from="3 and 1 Lines"
       formation="Formation boy -2 3 0 girl -2 1 0 boy -2 -1 0 girl -2 -3 180"
       parts="" >
    <path>
      <move select="U-Turn Right" beats="3" offsetX="2" offsetY="-.5" />
    </path>
    <path>
      <Movement hands="no" beats="3" cx1="-1" cy1="2" cx2="1" cy2="2.5" x2="2" y2="2.5" cx3="1" cx4="2" cy4="2" x4="3" y4="2" />
    </path>
    <path>
      <move select="Swing Right" hands="gripright" offsetX="2" offsetY="1.5" />
    </path>
    <path>
      <move select="Swing Right" hands="gripright" offsetX="-2" offsetY="-.5" />
    </path>
  </tam>
</tamination>
