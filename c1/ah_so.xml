<tamination>

  <tam title="Ah So" from="Right-Hand Wave" formation="Wave RH">
    <path numbers="1 4">
      <move select="Run Right" hands="gripright" scaleY="2" offsetX="2" />
    </path>
    <path numbers="2 3">
      <move select="U-Turn Right" hands="gripright" offsetX="-2" />
    </path>
  </tam>

  <tam title="Ah So" from="Left-Hand Wave" formation="Wave LH">
    <path>
      <move select="Run Left" hands="gripleft" scaleY="2" offsetX="2" />
    </path>
    <path>
      <move select="U-Turn Left" hands="gripleft" offsetX="-2" />
    </path>
  </tam>

  <tam title="Ah So"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Run Right" hands="gripright" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Right" hands="gripright" offsetX="-1" />
    </path>
    <path>
      <move select="U-Turn Right" hands="gripright" offsetX="-1" />
    </path>
    <path>
      <move select="Run Right" hands="gripright" scaleY="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Ah So"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="" >
    <path>
      <move select="Run Left" hands="gripleft" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Left" hands="gripleft" offsetX="-1" />
    </path>
    <path>
      <move select="U-Turn Left" hands="gripleft" offsetX="-1" />
    </path>
    <path>
      <move select="Run Left" hands="gripleft" scaleY="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Ah So"
       from="Inverted Lines"
       formation="Inverted Lines Centers In"
       parts="" >
    <path>
      <move select="Run Left" hands="gripleft" scaleY="2" offsetX="-1" />
    </path>
    <path>
      <move select="U-Turn Left" hands="gripleft" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Right" hands="gripright" offsetX="-1" />
    </path>
    <path>
      <move select="Run Right" hands="gripright" scaleY="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Ah So" from="3 and 1 Lines"
       formation="Formation girl -2 3 180 boy -2 1 0 girl -2 -1 180 boy -2 -3 180">
    <path numbers="5 4">
      <move select="Run Left" beats="4" hands="left" scaleY="2" offsetX="-1" />
    </path>
    <path numbers="6 3">
      <move select="U-Turn Left" beats="4" hands="left" offsetX="1" />
    </path>
    <path numbers="7 2">
      <move select="U-Turn Right" beats="4" hands="left" offsetX="1" />
    </path>
    <path numbers="8 1">
      <move select="Run Right" beats="4" hands="right" scaleX="2" scaleY="2" offsetX="1" />
    </path>
  </tam>


  <tam title="As Couples Ah So"
       from="Two-Faced Tidal Line"
       formation="Two-Faced Tidal Line RH"
       parts="" group=" ">
    <path>
      <move select="Run Right" beats="5" hands="gripright" scaleX="2" scaleY="3" offsetX="2" offsetY="-.5" />
    </path>
    <path>
      <move select="Run Right" beats="5" hands="gripboth" offsetX="2" offsetY=".5" scaleY="2" />
    </path>
    <path>
      <move select="U-Turn Right" beats="5" hands="gripboth" offsetX="-2" offsetY=".5" />
    </path>
    <path>
      <move select="Run Right" beats="5" hands="gripright" scaleY="3" offsetX="-2" offsetY="3.5" />
    </path>
  </tam>

  <tam title="Concentric Ah So" from="Tidal Wave" formation="Tidal Wave RH BGGB" group=" ">
    <path>
      <move select="Run Right" hands="gripright" offsetX="3" scaleY="2.25"/>
    </path>
    <path>
      <move select="U-Turn Right" hands="gripright" offsetX="-3" offsetY="1.5"/>
    </path>
    <path>
      <move select="Run Right" hands="gripright" scaleY="1.25" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Right" hands="gripright" offsetX="-1" offsetY="-.5"/>
    </path>
  </tam>

  <tam title="Stretch Ah So" from="Right-Hand Waves" formation="Ocean Waves RH BGGB" group=" ">
    <path>
      <move select="Run Right" hands="gripright" scaleY="2" offsetX="3" />
    </path>
    <path>
      <move select="U-Turn Right" hands="gripright" offsetX="-3" />
    </path>
    <path>
      <move select="U-Turn Right" hands="gripright" offsetX="-1" />
    </path>
    <path>
      <move select="Run Right" hands="gripright" scaleY="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Tandem Ah So" from="Right-Hand Waves" formation="Ocean Waves RH BGGB" group=" ">
    <path>
      <move select="Quarter Right" hands="gripright" beats="4" offsetX="4"/>
      <move select="Quarter Right" hands="gripright" beats="4" offsetX="4" offsetY="1"/>
    </path>
    <path>
      <move select="Quarter Right" hands="gripright" beats="4" offsetX="-3" offsetY="-2"/>
      <move select="Quarter Right" hands="gripright" beats="4" offsetX="-2" offsetY="-2"/>
    </path>
    <path>
      <move select="U-Turn Right" hands="gripright" beats="8" offsetX="1"/>
    </path>
    <path>
      <move select="Run Right" hands="gripright" beats="8" offsetX="-1" scaleY="2"/>
    </path>
  </tam>


</tamination>
