<tamination>

  <tam title="Checkover"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       parts="" >
    <path>
      <move select="Flip Right" beats="2" scaleY="1.5" />
      <move select="Forward 5" />
      <move select="Quarter Right" offsetX="1" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Flip Right" beats="2" scaleY="1.5" />
      <move select="Forward 3" />
      <move select="Quarter Right" offsetX="1" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Hinge Right" scaleX=".75" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="2" scaleY=".75" />
      <move select="Forward 2" hands="left" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Hinge Right" scaleX=".75" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY=".75" />
      <move select="Extend Left" hands="right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <taminator>Note that the Slither is blended into the end of Cast Off 3/4.
    </taminator>
  </tam>

  <tam title="Checkover"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       parts="" >
    <path>
      <move select="Forward 2" />
      <move select="Hinge Left" scaleX=".5" />
      <move select="Hinge Left" scaleX=".75" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="1.5" scaleY=".75" />
      <move select="Extend Right" hands="left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Hinge Left" scaleX=".5" />
      <move select="Hinge Left" scaleX=".75" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="2" scaleY=".75" />
      <move select="Forward 2" hands="right" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Flip Left" beats="2" scaleY="1.5" />
      <move select="Forward 3" />
      <move select="Quarter Left" offsetX="1" />
    </path>
    <path>
      <move select="Flip Left" beats="2" scaleY="1.5" />
      <move select="Forward 5" />
      <move select="Quarter Left" offsetX="1" />
    </path>
    <taminator>Note that the Slither is blended into the end of Cast Off 3/4.
    </taminator>
  </tam>

</tamination>
