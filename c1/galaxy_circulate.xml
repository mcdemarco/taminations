<tamination>

  <tam title="Galaxy Circulate"
       from="Right-Hand Galaxy"
       formation="Galaxy RH GP"
       parts="" >
    <path numbers="3 6">
      <move select="Lead Right" beats="3" scaleX="2" />
    </path>
    <path numbers="1 8">
      <move select="Lead Right" beats="3" scaleY="2" />
    </path>
    <path numbers="2 7">
      <move select="Extend Left" beats="3" scaleY="2.1" />
    </path>
    <path numbers="4 5">
      <move select="Extend Right" beats="3" scaleY="2.1" />
    </path>
    <taminator>Click the Paths button to see the circulate pattern.
    </taminator>
  </tam>

  <tam title="Galaxy Circulate"
       from="Left-Hand Galaxy"
       formation="Galaxy LH GP"
       parts="" >
    <path>
      <move select="Extend Right" beats="3" scaleY="2.1" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="2" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleY="2.1" />
    </path>
  </tam>
</tamination>
