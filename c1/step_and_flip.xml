<tamination>
  
  

  <tam title="Step and Flip"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       parts="" >
    <path>
      <move select="Flip Left" offsetX="-1" />
    </path>
    <path>
      <move select="Forward" hands="left" />
    </path>
    <path>
      <move select="Forward" hands="right" />
    </path>
    <path>
      <move select="Flip Right" offsetX="-1" />
    </path>
  </tam>

  <tam title="Step and Flip"
       from="Invertered Lines"
       formation="Inverted Lines Centers Out"
       parts="" >
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
    <path>
      <move select="Forward" hands="left" />
    </path>
    <path>
      <move select="Forward" hands="right" />
    </path>
    <path>
      <move select="Flip Left" offsetX="1" />
    </path>
  </tam>

