<tamination>
  
  

  <tam title="The Axle"
       from="Trade By"
       formation="Trade By"
       parts="4;3" >
    <path>
      <move select="Run Left" beats="4" scaleX="2" scaleY="2" offsetX="-1" />
      <move select="Swing Left" />
      <move select="Run Right" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2" offsetX="-1" />
      <move select="Swing Right" />
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Left" />
    </path>
  </tam>
</tamination>
