<tamination>
  
  

  <tam title="Phantom Bend the Lines" group="Phantom"
       from=""
       formation="Phantom Formation In">
    <path>
      <move select="Hinge Right" />
    </path>
    <path>
      <move select="BackHinge Left" />
    </path>
    <path>
      <move select="Hinge Right" />
    </path>
    <path>
      <move select="BackHinge Left" />
    </path>
    <path>
      <move select="BackHinge Right" />
    </path>
    <path>
      <move select="Hinge Left" />
    </path>
  </tam>

  <tam title="Phantom All 8 Circulate" group="Phantom"
       from=""
       formation="Phantom Formation RH">
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Flip Left" beats="4" />
    </path>
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Flip Left" beats="4" />
    </path>
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="2" scaleY="3"/>
    </path>
  </tam>

  <tam title="Phantom Pass Thru" group="Phantom"
       from=""
       formation="Phantom Formation In">
    <path>
      <move select="Forward 4" hands="right" />
    </path>
    <path>
      <move select="Forward 4" hands="left" />
    </path>
    <path>
      <move select="Forward 4" hands="right" />
    </path>
    <path>
      <move select="Forward 4" hands="left" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Phantom Couples Circulate" group="Phantom"
       from=""
       formation="Phantom Formation Two-Faced">
    <path>
      <move select="Forward 4" hands="right" />
    </path>
    <path>
      <move select="Forward 4" hands="left" />
    </path>
    <path>
      <move select="Run Left" beats="4" hands="right" scaleX="2" />
    </path>
    <path>
      <move select="Run Left" beats="4" hands="left" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="left" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="right" scaleX="3" scaleY="3" />
    </path>
  </tam>

  <tam title="Phantom Ferris Wheel" group="Phantom"
       from=""
       formation="Phantom Formation Two-Faced">
    <path>
      <move select="Run Right" beats="4" hands="gripright"
            scaleX="2" scaleY="2" offsetX="3" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="gripleft" offsetX="3" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="gripright" offsetX="1" />
    </path>
    <path>
      <move select="Run Left" beats="4" hands="gripleft"
            scaleX="2" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="gripleft" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="gripright"
            scaleX="2" scaleY="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Phantom Load the Boat" group="Phantom"
       from=""
       formation="Phantom Formation In">
    <path>
      <move select="Forward 3" />
      <move select="Lead Right" beats="2" scaleX="2.5" scaleY="3.5" />
      <move select="Lead Right" beats="2.5" scaleX="3.5" scaleY="3.5" />
      <move select="Lead Right" beats="2.5" />
    </path>
    <path>
      <move select="Forward 3" />
      <move select="Quarter Left" beats="2" />
      <move select="Run Left" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Forward 3" />
      <move select="Lead Right" beats="2" scaleX="2.5" scaleY="3.5" />
      <move select="Lead Right" beats="2.5" scaleX="3.5" scaleY="3.5" />
      <move select="Lead Right" beats="2.5" />
    </path>
    <path>
      <move select="Forward 3" />
      <move select="Quarter Left" beats="2" />
      <move select="Run Left" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Quarter Right" beats="2" />
      <move select="Flip Right"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Lead Left" beats="2" scaleX="1.5" scaleY="3.5" />
      <move select="Lead Left" beats="2.5" scaleX="2.5" scaleY="2.5" />
      <move select="Quarter Left" beats="2.5" offsetX="1"/>
    </path>
  </tam>

  <tam title="Phantom Wheel and Deal" group="Phantom"
       from=""
       formation="Phantom Formation Two-Faced">
    <path>
      <move select="Run Right" beats="4" hands="right" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="left" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="right" offsetX="1" />
    </path>
    <path>
      <move select="Run Left" beats="4" hands="left" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="left" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="right" scaleY="2" offsetX="1" />
    </path>
  </tam>


</tamination>
