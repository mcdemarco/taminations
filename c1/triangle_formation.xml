<tamination>

  <tam title="Outpoint Triangle Circulate"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points"
       group=" ">
    <path numbers="6 3">
      <move select="Flip Left" />
    </path>
    <path numbers="2 7">
      <move select="Lead Left" beats="3" scaleY="3" />
    </path>
    <path numbers="5 4">
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path numbers="8 1">
    </path>
  </tam>

  <tam title="Inpoint Triangle Circulate"
       from="Right-Hand Diamonds"
       formation="Formation boy 0 -3 270 girl -3 -2 90 boy 0 -1 270 girl 3 -2 270"
       group=" " >
    <path numbers="6 3">
      <move select="Run Right" beats="3" offsetX="-1" scaleY="1.5" />
    </path>
    <path numbers="2 7">
      <move select="Run Right" beats="3" offsetX="1" scaleY="1.5" />
    </path>
    <path numbers="5 4">
      <move select="Forward 2" beats="3"/>
    </path>
    <path numbers="8 1">
    </path>
  </tam>

  <tam title="Tandem-Based Triangle Circulate"
       from="Hourglass with Left-Hand Tandem Triangles"
       formation="Formation boy -2 -3 0 girl -3 0 90 boy -2 3 180 girl 0 1 0"
       group=" " >
    <path numbers="3 6">
      <move select="Forward 4" />
    </path>
    <path numbers="1 8">
    </path>
    <path numbers="2 7">
      <move select="U-Turn Left" beats="4" offsetX="-2" offsetY="2" />
    </path>
    <path numbers="4 5">
      <move select="U-Turn Left" beats="4" offsetX="2" offsetY="2" />
    </path>
  </tam>

  <tam title="Wave-Based Triangle Circulate"
       from="Right-Hand Galaxy"
       formation="Galaxy RH GP"
       group=" " >
    <path numbers="3 6">
      <move select="Lead Right" beats="3" scaleX="2" />
    </path>
    <path numbers="1 8">
      <move select="Lead Right" beats="3" scaleY="2" />
    </path>
    <path numbers="2 7">
      <move select="Flip Right" />
    </path>
    <path numbers="4 5">
    </path>
  </tam>

</tamination>
