<tamination>

  <tam title="Wheel And Spin the Top"
       from="Trade By"
       formation="Trade By" group="Wheel And"
       parts="" >
    <path>
      <move select="Lead Left" hands="left" beats="3" scaleY="3" />
      <move select="Lead Left" beats="3" scaleX="2" scaleY="2" />
      <move select="Lead Left" hands="left" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Quarter Left" hands="right" beats="3" offsetY="1" />
      <move select="Lead Left" beats="3" />
      <move select="Quarter Left" hands="right" beats="3" offsetX="1" />
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Right"/>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Extend Left" scaleY="2" beats="2"/>
      <move select="Swing Right"/>
      <move select="Cast Left"/>
    </path>
  </tam>

  <tam title="Wheel And Touch 1/4"
       from="Trade By"
       formation="Formation girl 1 3 90 boy -1 3 90 girl -1 1 270 boy 1 1 270"
       group="Wheel And"
       parts="" >
    <path numbers="5 4">
      <move select="Lead Left" hands="left" beats="3" scaleY="3" />
      <move select="Lead Left" beats="3" scaleX="2" scaleY="2" />
      <move select="Lead Left" hands="left" beats="3" scaleX="3" />
    </path>
    <path numbers="1 8">
      <move select="Quarter Left" hands="right" beats="3" offsetY="1" />
      <move select="Lead Left" beats="3" />
      <move select="Quarter Left" hands="right" beats="3" offsetX="1" />
    </path>
    <path numbers="2 7">
      <move select="Extend Left" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path numbers="6 3">
      <move select="Extend Left" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
  </tam>
</tamination>
