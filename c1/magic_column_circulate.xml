<tamination>

  <tam title="Magic Column Circulate"
       from="Magic Column Right-Hand Centers"
       formation="Magic Column RH"
       parts="2" >
    <path>
      <move select="Forward" beats="2" />
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Forward 2" beats="4" />
    </path>
    <path>
      <move select="Flip Left" beats="4" />
    </path>
  </tam>

  <tam title="Magic Column Circulate"
       from="Magic Column Left-Hand Centers"
       formation="Magic Column LH"
       parts="2" >
    <path numbers="2 7">
      <move select="Flip Right" beats="4" />
    </path>
    <path numbers="4 5">
      <move select="Forward 2" beats="4" />
    </path>
    <path numbers="6 3">
      <move select="Extend Left" beats="2" scaleY="2" />
      <move select="Forward" beats="2" />
    </path>
    <path numbers="8 1">
      <move select="Forward" beats="2" />
      <move select="Extend Right" beats="2" scaleY="2" />
    </path>
  </tam>
</tamination>
