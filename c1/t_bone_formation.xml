<tamination>

  <tam title="(T-Bone) Circulate" from="" parts="" group="(T-Bone)"
       formation="Formation girl -1 3 90  boy -1 1 180  girl -1 -1 90  boy -1 -3 180">
    <path numbers="5 4">
      <move select="Run Right"/>
    </path>
    <path numbers="6 3">
      <move select="Run Left"/>
    </path>
    <path numbers="7 2">
      <move select="Forward 2" beats="3"/>
    </path>
    <path numbers="8 1">
      <move select="Run Right" scaleX="2" scaleY="3" beats="5"/>
    </path>
  </tam>

  <tam title="(T-Bone) Split Circulate" from="" parts="" group="(T-Bone)"
       formation="Formation girl -1 3 90  boy -1 1 180  girl -1 -1 90  boy -1 -3 180">
    <path numbers="5 4">
      <move select="Run Right"/>
    </path>
    <path numbers="6 3">
      <move select="Run Right"/>
    </path>
    <path numbers="7 2">
      <move select="Flip Right"/>
    </path>
    <path numbers="8 1">
      <move select="Run Right"/>
    </path>
  </tam>

  <tam title="(T-Bone) Scoot Back" from="" group="(T-Bone)"
       formation="Formation girl -1 3 0  boy -1 1 270  girl -1 -1 0  boy -1 -3 270">
    <path numbers="5 4">
      <move select="Extend Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
    </path>
    <path numbers="6 3">
      <move select="Run Left" scaleX=".5" beats="5"/>
    </path>
    <path numbers="7 2">
      <move select="Extend Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
    </path>
    <path numbers="8 1">
      <move select="Run Left" beats="5"/>
    </path>
  </tam>

  <tam title="(T-Bone) Follow Your Neighbor"
       from="Left-Handed T-Bone (DBD)"
       formation="Formation girl 1 3 0  boy 1 1 90  girl 1 -1 0  boy 1 -3 90"
       group="(T-Bone)" >
    <path numbers="1 8">
      <move select="Lead Right" beats="2.5" scaleX="2.5" />
      <move select="Run Right" scaleX=".5" scaleY=".25" />
    </path>
    <path numbers="2 7">
      <move select="Extend Left" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Hinge Left" offsetY="-.25" />
    </path>
    <path numbers="3 6">
      <move select="Lead Right" beats="2.5" scaleX="2.5" />
      <move select="Run Right" scaleX=".5" scaleY=".25" />
    </path>
    <path numbers="4 5">
      <move select="Extend Left" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Hinge Left" offsetY="-.25" />
    </path>
  </tam>

</tamination>
