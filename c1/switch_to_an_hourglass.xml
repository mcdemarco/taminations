<tamination>
  
  

  <tam title="Switch to an Hourglass" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Extend Right" beats="4" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Flip Left" beats="4"/>
    </path>
    <path>
      <move select="Flip Left" beats="4"/>
    </path>
    <path>
      <move select="Lead Right" beats="2"/>
      <move select="Forward 2"/>
    </path>

  </tam>

  <tam title="Switch to an Hourglass" from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH">
    <path>
      <move select="Lead Left" beats="2"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Switch to an Hourglass" from="3 and 1 Lines"
       formation="Formation boy -2 3 180 girl -2 1 180 boy -2 -1 180 girl -2 -3 0">
    <path>
      <move select="Lead Left" beats="2"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
    <path>
      <move select="Run Left" beats="4"/>
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="2" scaleY="2"/>
    </path>
  </tam>

</tamination>