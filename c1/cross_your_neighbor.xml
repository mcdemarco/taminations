<tamination>
  
  

  <tam title="Cross Your Neighbor" from="Right-Hand Box" formation="Box RH">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.75" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Hinge Left" offsetY="-.25" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" />
      <move select="Run Right" beats="3.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Cross Your Neighbor" from="Left-Hand Box" formation="Box LH">
    <path>
      <move select="Lead Left" beats="3" scaleX="2" />
      <move select="Run Left" beats="3.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.75" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Hinge Right" offsetY=".25" />
    </path>
  </tam>

  <tam title="Cross Your Neighbor"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG"
       parts="" >
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.75" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Hinge Left" offsetY="-.25" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" />
      <move select="Run Right" beats="3.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.75" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Hinge Left" offsetY="-.25" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" />
      <move select="Run Right" beats="3.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Cross Your Neighbor"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG"
       parts="" >
    <path>
      <move select="Lead Left" beats="3" scaleX="2" />
      <move select="Run Left" beats="3.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.75" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Hinge Right" offsetY=".25" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="2" />
      <move select="Run Left" beats="3.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.75" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Hinge Right" offsetY=".25" />
    </path>
  </tam>

  <tam title="As Couples Cross Your Neighbor"
       from="Two-Faced Lines" formation="Two-Faced Lines RH">
    <path>
      <move select="Extend Right" beats="4" hands="gripright" scaleX="2" scaleY="3.5"/>
      <move select="Cast Left" beats="6" hands="both" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Right" beats="4" hands="gripleft" scaleX="2" scaleY="2.5"/>
      <move select="Cast Left" beats="6" scaleX="1.5" scaleY="1.5"/>
    </path>
    <path>
      <move select="Extend Right" beats="4" hands="left" scaleX="2" scaleY=".5"/>
      <move select="Cast Right" beats="6" hands="left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Right" beats="4" hands="right" scaleX="2" scaleY="1.5"/>
      <move select="Cast Right" beats="6" scaleX="1.5" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="All 8 Cross Your Neighbor"
       from="Squared Mini-Waves"  formation="Static MiniWaves RH">
    <path>
      <move select="Extend Right" beats="4.5" scaleX="3" scaleY="2"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Cast Right" beats="6.5"/>
    </path>
    <path>
      <move select="Extend Right" beats="4.5" scaleX="3" scaleY="2"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Cast Right" beats="6.5"/>
    </path>
  </tam>

</tamination>
