<tamination>

  <tam title="And Weave" from="Right-Hand Box"
       formation="Formation boy 1 2 270 girl -1 2 90">
    <path numbers="3 2">
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path numbers="1 4">
      <move select="Lead Right" />
    </path>
  </tam>

  <tam title="And Weave" from="Single Eight Chain Thru"
       formation="Formation boy 0 3 270 girl 0 1 90">
    <path numbers="1 4">
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Hinge Left"  />
    </path>
    <path numbers="2 3">
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" scaleY=".5" />
    </path>
  </tam>

  <tam title="And Weave"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="" >
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" />
    </path>
  </tam>

  <tam title="And Weave"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="" >
    <path>
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Hinge Right" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Hinge Right" scaleY=".5" />
    </path>
  </tam>

  <tam title="And Weave"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       parts="" >
    <path>
      <move select="Lead Right" scaleX=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY="1.5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" scaleX=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY="1.5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
    </path>
  </tam>

  <tam title="And Weave"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       parts="" >
    <path>
      <move select="Extend Left" beats="1.5" scaleY="1.5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Left" scaleX=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleY="1.5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Left" scaleX=".5" />
    </path>
  </tam>

  <tam title="And Weave"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       parts="" >
    <path>
      <move select="Extend Left" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" />
      <move select="Quarter Right" offsetX="1" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Lead Right" />
    </path>
  </tam>

  <tam title="As Couples And Weave"
       from="Two-Faced Lines"
       formation="Two-Faced Lines RH"
       parts="" >
    <path>
      <move select="Extend Right" hands="right" beats="3" scaleX="2" scaleY="3.5" />
      <move select="Lead Left" hands="both" beats="2" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" hands="left" beats="3" scaleX="2" scaleY="2.5" />
      <move select="Lead Left" hands="left" beats="2" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Lead Right" hands="left" beats="2" scaleX=".5" />
    </path>
    <path>
      <move select="Lead Right" hands="right" beats="2" scaleX="1.5" scaleY="3" />
    </path>
  </tam>

  <tam title="All 8 And Weave"
       from="Mini Waves"
       formation="Static MiniWaves RH"
       parts="" >
    <path>
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1" />
    </path>
  </tam>


</tamination>