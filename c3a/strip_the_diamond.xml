<tamination>

  <tam title="Strip the Diamond" from="Right-Hand Diamonds" formation="Diamonds RH Girl Points">
    <path>
      <move select="Lead Right" beats="5" scaleX="3.5" scaleY="3"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5" offsetY="-.5"/>
    </path>
    <path>
      <move select="Hinge Left" beats="2" scaleX=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="U-Turn Left" beats="2" offsetX="-2"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5" offsetY=".5"/>
    </path>
  </tam>

  <tam title="Strip the Diamond" from="Left-Hand Diamonds" formation="Diamonds LH Girl Points">
    <path>
      <move select="Lead Left" beats="5" scaleX="3.5" scaleY="3"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="2" offsetX="-2"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5" offsetY="-.5"/>
    </path>
    <path>
      <move select="Hinge Right" beats="2" scaleX=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5" offsetY=".5"/>
    </path>
  </tam>

</tamination>
