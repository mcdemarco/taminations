<tamination>
  
  

  <tam title="Tag the Line Chain Thru" from="Lines Facing Out"
       formation="Lines Facing Out" parts="3.5">
    <path>
      <move select="Quarter Left"  offsetX="-1" offsetY="1"/>
      <move select="Stand" beats="2"/>
      <move select="Forward 2"/>
      <move select="Swing Right"/>
      <move select="Stand" beats="3"/>
      <move select="Swing Right"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="-1" offsetY="1"/>
      <move select="Forward 2"/>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2"/>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Stand" beats="2"/>
      <move select="Forward 2"/>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
      <move select="Swing Right"/>
      <move select="Forward 2"/>
    </path>
  </tam>

  <tam title="Flip the Line Chain Thru" from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB" parts="6.5">
    <path>
      <move select="Lead Right" beats="3.5" scaleY="2" />
      <move select="Forward 3"/>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Run Right" />
      <move select="Lead Right" />
      <move select="Forward 2" />
      <move select="Swing Right"/>
      <move select="Stand" beats="3"/>
      <move select="Swing Right"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Run Right" />
      <move select="Lead Right"/>
      <move select="Forward 2"/>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
      <move select="Swing Right"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Lead Right" beats="3.5" scaleY="2" />
      <move select="Forward 3"/>
      <move select="Run Right"/>
    </path>
  </tam>

</tamination>
