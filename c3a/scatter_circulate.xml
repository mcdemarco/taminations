<tamination>
  
  <tam title="Scatter Circulate" from="Normal Lines" formation="Normal Lines">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="2"/>
      <move select="Forward 3" beats="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Scatter Circulate" from="Lines Facing Out" formation="Lines Facing Out">
    <path>
      <move select="Flip Left" beats="4"/>
    </path>
    <path>
      <move select="Run Left" beats="4" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
  </tam>  

  <tam title="Scatter Circulate" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4"/>
    </path>
  </tam>

  <tam title="Scatter Circulate" from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH">
    <path>
      <move select="Run Left" beats="4"/>
    </path>
    <path>
      <move select="Run Left" beats="4" scaleY="2"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Extend Left" beats="3" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 4"/>
    </path>
  </tam>

</tamination>
