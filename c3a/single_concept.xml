<tamination>

  <tam title="Single Cast Off Three Quarters" from="Couples Facing Out"
       formation="Couples Facing Out" group="Single">
    <path>
      <move select="Lead Right"/>
      <move select="Lead Right"/>
      <move select="Lead Right"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Lead Left"/>
      <move select="Lead Left"/>
    </path>
  </tam>

  <tam title="Single Track Two" from="Couples Facing Out" formation="Couples Facing Out" group="Single">
    <path>
      <move select="Flip Left"/>
      <move select="Forward 2" beats="3"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Single Circle to a Line" from="Eight Chain Thru" formation="Eight Chain Thru"
       group="Single">
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Dodge Right" scaleY=".25"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Dodge Right" scaleY="1.25"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Run Right" scaleY=".25"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Run Right" scaleY="1.25"/>
    </path>
  </tam>

  <tam title="Single Turn and Deal" from="Box RH" formation="Box RH" group="Single">
    <path>
      <move select="Flip Right" scaleX=".5" scaleY=".5" offsetX="1"/>
    </path>
    <path>
      <move select="Flip Right" scaleX=".5" scaleY=".5" offsetX="1"/>
    </path>
  </tam>

  <tam title="Single Wheel Thru" formation="Single Eight Chain Thru" group="Single">
    <path>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetY="-2"/>
    </path>
  </tam>

</tamination>
