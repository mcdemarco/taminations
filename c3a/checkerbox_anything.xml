<tamination>

  <tam title="Checkerbox Turn Thru" group="Checkerbox" formation="Ocean Waves RH BGGB">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Run Left" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Run Right" beats="5" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Checkerbox Swap Around" group="Checkerbox" formation="Ocean Waves RH BGGB">
    <path>
      <move select="Flip Right" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Run Left" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Right" beats="5" scaleX="4" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="5" scaleX="2" scaleY="2"/>
    </path>
  </tam>

</tamination>
