<tamination>
  
  

  <tam title="Follow to a Diamond"
       from="Right-Hand Box"
       formation="Box RH"
       parts="" >
    <path>
      <move select="Forward 2" beats="1.5" offsetY="-.125" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="2" offsetX="2" offsetY=".25" />
    </path>
    <path>
      <move select="Run Right" beats="4" />
      <move select="Forward 2" beats="2.5" />
    </path>
  </tam>

  <tam title="Follow to a Diamond"
       from="Left-Hand Box"
       formation="Box LH"
       parts="" >
    <path>
      <move select="Run Left" beats="4" />
      <move select="Forward 2" beats="2.5" />
    </path>
    <path>
      <move select="Forward 2" beats="1.5" offsetY=".125" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="2" offsetX="2" offsetY="-.25" />
    </path>
  </tam>

  <tam title="Follow to a Diamond"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG"
       parts="" >
    <path>
      <move select="Forward 2" beats="1.5" offsetY="-.125" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="2" offsetX="2" offsetY=".25" />
    </path>
    <path>
      <move select="Run Right" beats="4" />
      <move select="Forward 2" beats="2.5" />
    </path>
    <path>
      <move select="Forward 2" beats="1.5" offsetY="-.125" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="2" offsetX="2" offsetY=".25" />
    </path>
    <path>
      <move select="Run Right" beats="4" />
      <move select="Forward 2" beats="2.5" />
    </path>
  </tam>
</tamination>
