<tamination>
  
  

  <tam title="Wind the Bobbin"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       parts="1;4.5;3" >
    <path>
      <move select="Run Left" offsetX="-1" />
      <move select="Forward 4" />
      <move select="Run Left" beats="6" scaleX="2" scaleY="3" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Run Left" offsetX="-1" />
      <move select="Run Left" beats="6" scaleX="2" scaleY="3" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Cast Right" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="Wind the Bobbin"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       parts="1;4.5;3" >
    <path>
      <move select="Forward" />
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Run Right" offsetX="-1" />
      <move select="Run Right" beats="6" scaleX="2" scaleY="3" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Run Right" offsetX="-1" />
      <move select="Forward 4" />
      <move select="Run Right" beats="6" scaleX="2" scaleY="3" />
    </path>
  </tam>
</tamination>
