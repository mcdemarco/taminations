<tamination>

  <tam title="Big Block Circulate (from Interlocked Blocks)" group="Big Block"
       formation="Formation boy -3 1 180 girl -3 -3 180 boy -1 3 0 girl -1 -1 0">
    <path>
      <move select="Run Left"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Run Right" scaleX="2" scaleY="3" beats="5"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Forward 4"/>
    </path>
  </tam>

  <tam title="Big Block Split Circulate (from Interlocked Blocks" group="Big Block"
       formation="Formation boy -3 1 180 girl -3 -3 180 boy -1 3 0 girl -1 -1 0">
    <path>
      <move select="Run Right"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Forward 4"/>
    </path>
 </tam>
</tamination>
