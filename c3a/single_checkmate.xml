<tamination>
  
  

  <tam title="Single Checkmate" from="Right-Hand Box" formation="Box RH">
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="4" scaleY="3"/>
    </path>
    <path>
      <move select="Run Right" scaleY="1.5"/>
      <move select="Quarter Right" beats="3" offsetX="3"/>
    </path>
  </tam>

  <tam title="Single Checkmate" from="Left-Hand Box" formation="Box LH">
    <path>
      <move select="Run Left" scaleY="1.5"/>
      <move select="Quarter Left" beats="3" offsetX="3"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Left" beats="4" scaleY="3"/>
    </path>
  </tam>

</tamination>
