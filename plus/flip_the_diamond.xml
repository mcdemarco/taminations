<tamination>

  <tam title="Flip the Diamond"
       from="Right-Hand Diamond"
       formation="Diamond RH"
       parts="" difficulty="1">
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="3" />
    </path>
  </tam>

  <tam title="Flip the Diamond"
       from="Left-Hand Diamond"
       formation="Diamond LH"
       parts="" difficulty="1">
    <path>
      <move select="Run Left" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
  </tam>

  <tam title="Flip the Diamond"
       from="Facing Diamond"
       formation="Diamond Facing"
       parts="" difficulty="2">
    <path>
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
  </tam>

  <tam title="Flip the Diamond"
       from="Right-Hand Diamonds"
       formation="Diamonds RH Girl Points"
       parts="" difficulty="1">
    <path>
      <move select="Lead Right" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Run Right" />
    </path>
  </tam>

  <tam title="Flip the Diamond"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points"
       parts="" difficulty="1">
    <path>
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Run Left" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Run Left" />
    </path>
  </tam>

  <tam title="Flip the Diamond"
       from="Facing Diamonds"
       formation="Diamonds Facing Girl Points"
       parts="" difficulty="2">
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Flip Left" />
    </path>
  </tam>

  <tam title="Flip the Diamond" from="Facing Diamonds, Left-Hand Centers"
       formation="Diamonds Facing LH Girl Points" difficulty="2">
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Flip Right" />
    </path>
    <taminator>
    The points take the inside path, even though they pass left shoulders
    with the centers.
    </taminator>
  </tam>

  <tam title="Flip the Diamond"
       formation="Diamonds 3 and 1 Girl Points"
       from="3 and 1 Diamonds" difficulty="2">
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Flip Right" />
    </path>
  </tam>

  <tam title="Flip the Diamond"
       from="Point-to-Point Diamonds"
       formation="Diamonds RH PTP Girl Points"
       parts="" difficulty="2">
    <path>
      <move select="Lead Right" beats="3" scaleX="2.5" />
    </path>
    <path>
      <move select="Run Right" scaleX=".5" scaleY=".25" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX=".5" />
    </path>
    <path>
      <move select="Run Right" scaleY="1.25" />
    </path>
  </tam>
</tamination>
