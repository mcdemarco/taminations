<tamination>

  <tam title="Peel the Top"
       from="Right-Hand Box"
       formation="Box RH"
       parts="" difficulty="1">
    <path>
      <move select="Forward 2" />
      <move select="Cast Right" beats="4" />
    </path>
    <path>
      <move select="Run Left" offsetX="-2" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3" />
    </path>
  </tam>

  <tam title="Peel the Top"
       from="Left-Hand Box"
       formation="Box LH"
       parts="" difficulty="1">
    <path>
      <move select="Run Right" offsetX="-2" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Cast Left" beats="4" />
    </path>
  </tam>

  <tam title="Peel the Top"
       from="Z formation"
       formation="Z RH GBBG"
       parts="" difficulty="1">
    <path>
      <move select="Forward" beats="1.5" scaleX="1.5" scaleY="2" />
      <move select="Swing Right" />
      <move select="Hinge Right" scaleX=".65" />
    </path>
    <path>
      <move select="Run Left" />
      <move select="Lead Left" beats="3" scaleX="1.8" scaleY="3" />
    </path>
    <path>
      <move select="Run Left" />
      <move select="Lead Left" beats="3" scaleX="1.8" scaleY="3" />
    </path>
    <path>
      <move select="Forward" beats="1.5" scaleX="1.5" scaleY="2" />
      <move select="Swing Right" />
      <move select="Hinge Right" scaleX=".65" />
    </path>
  </tam>

  <tam title="Peel the Top"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="" difficulty="3">
    <path>
      <move select="Forward" beats="1.5" scaleX="2" scaleY="2" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Run Left" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Forward" beats="1.5" scaleX="2" scaleY="2" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Run Left" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="5" scaleX="5" scaleY="2" />
    </path>
  </tam>

  <tam title="Peel the Top"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="" difficulty="3">
    <path>
      <move select="Run Right" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="5" scaleX="5" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="1.5" scaleX="2" scaleY="2" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Run Right" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Forward" beats="1.5" scaleX="2" scaleY="2" />
      <move select="Cast Left" />
    </path>
  </tam>

  <tam title="Peel the Top"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       parts="" difficulty="2">
    <path>
      <move select="Run Left" offsetX="-1" />
      <move select="Lead Left" beats="3" scaleX="1.5" scaleY="3" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Swing Right" />
      <move select="Hinge Right" scaleX=".5" />
    </path>
    <path>
      <move select="Run Left" offsetX="-1" />
      <move select="Lead Left" beats="3" scaleX="1.5" scaleY="3" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Swing Right" />
      <move select="Hinge Right" scaleX=".5" />
    </path>
  </tam>

  <tam title="Peel the Top"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       parts="" difficulty="2">
    <path>
      <move select="Forward" />
      <move select="Swing Left" />
      <move select="Hinge Left" scaleX=".5" />
    </path>
    <path>
      <move select="Run Right" offsetX="-1" />
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="3"/>
    </path>
    <path>
      <move select="Forward" />
      <move select="Swing Left" />
      <move select="Hinge Left" scaleX=".5" />
    </path>
    <path>
      <move select="Run Right" offsetX="-1" />
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="3"/>
    </path>
  </tam>

  <tam title="Peel the Top"
       from="T-Bones"
       formation="T-Bone LULU"
       parts="" difficulty="3">
    <path>
      <move select="Run Left" offsetX="-1" />
      <move select="Lead Left" beats="3" scaleY="3" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Swing Left" offsetY="1" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Run Left" offsetX="-1" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Swing Left" offsetY="-1" />
      <move select="Hinge Left" />
    </path>
  </tam>
</tamination>
