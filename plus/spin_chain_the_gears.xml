<tamination>

  <tam title="Spin Chain the Gears"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="3;4.5;3;4.5;3" difficulty="1">
    <path>
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Stand" beats="2" />
      <move select="Flip Right" beats="5.5" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Stand" beats="2" />
      <move select="Flip Right" beats="5.5" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Flip Right" />
    </path>
  </tam>

  <tam title="Spin Chain the Gears"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="3;4.5;3;4.5;3" difficulty="2">
    <path>
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" hands="gripright"/>
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="Stand" beats="2" />
      <move select="Flip Left" beats="5.5" />
      <move select="Cast Right" hands="gripright"/>
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="Stand" beats="2" />
      <move select="Flip Left" beats="5.5" />
      <move select="Cast Right" hands="gripright"/>
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Cast Right" hands="gripright"/>
      <move select="Flip Left" />
    </path>
  </tam>

  <tam title="Spin Chain the Gears"
       from="Tidal Wave"
       formation="Tidal Wave RH BGGB"
       parts="3;4.5;3;4.5;3" difficulty="3">
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Left" scaleY=".5"/>
      <move select="Stand" beats="3" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Swing Right"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Flip Right" beats="4.5" scaleY=".25"/>
      <move select="Stand" beats="3" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Flip Right" beats="4.5" scaleY=".25"/>
      <move select="Swing Right"/>
      <move select="Cast Left" hands="gripleft"/>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Left" scaleY=".5"/>
      <move select="Stand" beats="3" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Stand" beats="3"/>
      <move select="Cast Left"/>
    </path>
  </tam>

  <tam title="Spin Chain the Gears"
       from="Two-Faced Lines"
       formation="Two-Faced Lines RH"
       parts="3;4.5;3;4.5;3" difficulty="3">
    <path>
      <move select="Run Right"/>
      <move select="Cast Left"/>
      <move select="Swing Right"/>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Hinge Left" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Left"  scaleY=".5"/>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Flip Left"/>
      <move select="Stand" beats="3"/>
      <move select="Flip Left" beats="4.5"/>
      <move select="Lead Right" scaleX="1.5"/>
      <move select="Lead Right" scaleX="1.5" scaleY="1.5"/>
      <move select="Lead Right"  scaleY="1.5"/>
      <move select="Stand" beats="3"/>
      <move select="Cast Right" hands="gripright"/>
    </path>
    <path>
      <move select="Flip Left"/>
      <move select="Stand" beats="3"/>
      <move select="Flip Left" beats="4.5"/>
      <move select="Lead Right" scaleX="1.5"/>
      <move select="Lead Right" scaleX="1.5" scaleY="1.5"/>
      <move select="Lead Right"  scaleY="1.5"/>
      <move select="Swing Left"/>
      <move select="Cast Right" hands="gripright"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Cast Left"/>
      <move select="Stand" beats="3"/>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Hinge Left" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Left" scaleY=".5"/>
      <move select="Flip Right"/>
    </path>
  </tam>


</tamination>
