<tamination>

  <tam title="Load the Boat"
       from="Normal Lines"
       formation="Normal Lines"
       parts="2;2;3" difficulty="1">
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Right" scaleX="2.5" scaleY="3.5" beats="2" />
      <move select="Lead Right" scaleX="3.5" scaleY="3.5" beats="2.5" />
      <move select="Lead Right" beats="2.5" />
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Quarter Left" beats="2" />
      <move select="Flip Left" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Quarter Right" beats="2" />
      <move select="Run Right" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Left" scaleX="1.5" scaleY="3.5" beats="2" />
      <move select="Lead Left" scaleX="2.5" scaleY="2.5" beats="2.5" />
      <move select="Quarter Left" beats="2.5" offsetX="1" />
    </path>
  </tam>

  <tam title="Load the Boat"
       from="Inverted Lines"
       formation="Inverted Lines Centers In"
       parts="" difficulty="2">
    <path>
      <move select="Run Left" beats="4" scaleX="1.5" scaleY="3" />
      <move select="Forward 5" beats="3" />
      <move select="Run Left" scaleY="2" />
    </path>
    <path>
      <move select="Pass Thru" scaleX="1.5" />
      <move select="Quarter Left" beats="2" />
      <move select="Flip Left" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Pass Thru" scaleX="1.5" />
      <move select="Quarter Right" beats="2" />
      <move select="Run Right" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="2.5" scaleY="3.5" />
      <move select="Forward 5" beats="3" />
      <move select="Run Right" scaleX="2" scaleY="2.5" />
    </path>
  </tam>

  <tam title="Load the Boat"
       from="Tidal Wave"
       formation="Tidal Wave RH BGGB"
       parts="1;2;3" difficulty="2">
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Right" scaleX="2.5" scaleY="3.5" beats="2" />
      <move select="Lead Right" scaleX="3.5" scaleY="3.5" beats="2.5" />
      <move select="Lead Right" beats="2.5" />
    </path>
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Left" scaleX="1.5" scaleY="3.5" beats="2" />
      <move select="Lead Left" scaleX="2.5" scaleY="2.5" beats="2.5" />
      <move select="Quarter Left" beats="2.5" offsetX="1" />
    </path>
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Quarter Left" beats="2" />
      <move select="Flip Left" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Quarter Right" beats="2" />
      <move select="Run Right" />
      <move select="Pass Thru" />
    </path>
    <taminator>
      This is an application of the <a href="../ms/ocean_wave_rule.html">Ocean Wave Rule</a>.
    </taminator>
  </tam>

  <tam title="Load the Boat" from="Diamonds, Points Facing"
       formation="Formation boy 0 -3 180 girl -3 -2 90 boy 0 -1 0 girl 3 -2 90" parts="2;2;3" difficulty="3">
    <path>
      <move select="Extend Right" scaleY="2" beats="2" />
      <move select="Quarter Left" beats="2"/>
      <move select="Flip Left" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Right" scaleX="2.5" scaleY="3.5" beats="2" />
      <move select="Lead Right" scaleX="3.5" scaleY="3.5" beats="2.5" />
      <move select="Lead Right" beats="2.5" />
    </path>
    <path>
      <move select="Forward" beats="2" />
      <move select="Quarter Right" beats="2"/>
      <move select="Run Right" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Left" scaleX="1.5" scaleY="3.5" beats="2" />
      <move select="Lead Left" scaleX="2.5" scaleY="2.5" beats="2.5" />
      <move select="Quarter Left" beats="2.5" offsetX="1" />
    </path>
  </tam>

  <tam title="Load the Boat" from="Diamonds, Points Out"
       formation="Diamonds 3 and 1 Girl Points" parts="2;2;3" difficulty="3">
    <path>
      <move select="Extend Right" scaleY="2" beats="2" />
      <move select="Quarter Left" beats="2"/>
      <move select="Flip Left" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Run Left" beats="4" scaleX="1.5" scaleY="3" />
      <move select="Forward 5" beats="3" />
      <move select="Run Left" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
      <move select="Quarter Right" beats="2"/>
      <move select="Run Right" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="2.5" scaleY="3.5" />
      <move select="Forward 5" beats="3" />
      <move select="Run Right" scaleX="2" scaleY="2.5" />
    </path>
  </tam>

  <tam title="Load the Boat" from="Wave between Mini-Waves"
       formation="Concentric Diamonds Mixed"
       parts="2;2;3" difficulty="3">
    <path>
      <move select="Extend Right" scaleY="2" beats="2" />
      <move select="Quarter Left" beats="2"/>
      <move select="Flip Left" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Forward" beats="2" />
      <move select="Quarter Right" beats="2"/>
      <move select="Run Right" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Left" scaleX="1.5" scaleY="3" beats="3" />
      <move select="Lead Left" scaleX="2.5" scaleY="2.5" beats="2.5" />
      <move select="Quarter Left" beats="2.5" offsetX="1" />
    </path>
    <path>
      <move select="Extend Right"  />
      <move select="Lead Right" scaleX="2.5" scaleY="3.5" beats="3" />
      <move select="Lead Right" scaleX="3.5" scaleY="3.5" beats="2.5" />
      <move select="Lead Right" beats="2.5" />
    </path>
  </tam>

  <tam title="Load the Boat"
       from="T-Bones, Ends Facing In"
       formation="Formation boy -1 -3 0 girl -1 1 270 boy -1 -1 90 girl -1 3 0"
       parts="2;2;3" difficulty="3">
    <path>
      <move select="Pass Thru" />
      <move select="Lead Left" scaleX="1.5" scaleY="3.5" beats="2" />
      <move select="Lead Left" scaleX="2.5" scaleY="2.5" beats="2.5" />
      <move select="Quarter Left" beats="2.5" offsetX="1" />
    </path>
    <path>
      <move select="Pass Thru" />
      <move select="Quarter Right" beats="2" />
      <move select="Run Right" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Pass Thru" />
      <move select="Quarter Left" beats="2" />
      <move select="Flip Left" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Pass Thru" />
      <move select="Lead Right" scaleX="2.5" scaleY="3.5" beats="2" />
      <move select="Lead Right" scaleX="3.5" scaleY="3.5" beats="2.5" />
      <move select="Lead Right" beats="2.5" />
    </path>
  </tam>

  <tam title="Load the Boat"
       from="T-Bones, Ends Facing Out"
       formation="Formation boy -1 -3 180 girl -1 1 270 boy -1 -1 90 girl -1 3 180"
       parts="" difficulty="3">
    <path>
      <move select="Run Right" beats="4" scaleX="2.5" scaleY="3.5" />
      <move select="Forward 4" beats="3" />
      <move select="Run Right" scaleX="2" scaleY="2.5" />
    </path>
    <path>
      <move select="Pass Thru" />
      <move select="Quarter Right" beats="2" />
      <move select="Run Right" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Pass Thru" />
      <move select="Quarter Left" beats="2" />
      <move select="Flip Left" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Run Left" beats="4" scaleX="1.5" scaleY="3" />
      <move select="Forward 4" beats="3" />
      <move select="Run Left" scaleY="2" />
    </path>
  </tam>
</tamination>
