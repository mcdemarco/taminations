<tamination>

  <tam title="Trade the Wave"
       from="Right-Hand Wave"
       formation="Wave RH"
       parts="" difficulty="1">
    <path>
      <move select="Run Right" beats="6" scaleX="1.5" scaleY="2" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX=".5" scaleY="2" />
    </path>
  </tam>

  <tam title="Trade the Wave"
       from="Left-Hand Wave"
       formation="Wave LH"
       parts="" difficulty="1">
    <path>
      <move select="Run Left" beats="6" scaleX=".5" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="1.5" scaleY="2" />
    </path>
  </tam>

  <tam title="Trade the Wave"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="" difficulty="1">
    <path>
      <move select="Run Right" beats="6" scaleX="1.5" scaleY="2" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX=".5" scaleY="2" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX=".5" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="1.5" scaleY="2" />
    </path>
  </tam>

  <tam title="Trade the Wave"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="" difficulty="1">
    <path>
      <move select="Run Left" beats="6" scaleX=".5" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="1.5" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="1.5" scaleY="2" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX=".5" scaleY="2" />
    </path>
  </tam>

  <tam title="Trade the Wave"
       from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB"
       parts="" difficulty="2">
    <path>
      <move select="Run Right" beats="6" scaleX="1.5" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX=".5" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX=".5" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="1.5" />
    </path>
  </tam>

  <tam title="Trade the Wave"
       from="Left-Hand Tidal Wave"
       formation="Tidal Wave LH BGGB"
       parts="" difficulty="2">
    <path>
      <move select="Run Left" beats="6" scaleX=".5" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="1.5" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="1.5" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX=".5" />
    </path>
  </tam>
</tamination>
